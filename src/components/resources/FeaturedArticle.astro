---
interface Props {
  title: string;
  excerpt: string;
  author: string;
  date: string;
  category?: string;
  image: string;
  slug: string;
}

const { title, excerpt, author, date, category, image, slug } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', { 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
});
---

<article class="featured-article max-w-7xl mx-auto px-6 mb-16">
  <div class="bg-white rounded-xl overflow-hidden border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 grid md:grid-cols-2 gap-0">
    <div class="h-80 md:h-auto">
      <img src={image} alt={title} class="w-full h-full object-cover" />
    </div>
    <div class="p-8 flex flex-col justify-between">
      {category && (
        <span class="inline-block px-3 py-1 bg-blue-50 text-blue-700 text-xs font-semibold rounded-full w-fit mb-4">
          {category}
        </span>
      )}
      <div>
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3">
          {title}
        </h2>
        <p class="text-gray-600 mb-6 leading-relaxed">
          {excerpt}
        </p>
      </div>
      <div>
        <div class="text-sm text-gray-500 flex gap-3 mb-6">
          <span>{author}</span>
          <span>â€¢</span>
          <span>{formattedDate}</span>
        </div>
        <a href={slug} class="text-blue-600 font-semibold hover:text-blue-700 transition-colors inline-flex items-center gap-2">
          Read article
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</article>

