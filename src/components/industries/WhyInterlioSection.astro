---
// Why Intelio section - McKinsey-style image + copy layout
// White background with image on left, content on right

interface Props {
  headline: string;
  statText: string;
  copyText: string;
  imageUrl: string;
  imageAlt: string;
}

const {
  headline,
  statText,
  copyText,
  imageUrl,
  imageAlt,
} = Astro.props;
---

<section class="why-intelio-section">
  <div class="why-intelio-container">
    <div class="why-intelio-image">
      <img src={imageUrl} alt={imageAlt} />
    </div>
    
    <div class="why-intelio-content">
      <h2 class="why-intelio-headline">{headline}</h2>
      <p class="why-intelio-stat" set:html={statText}></p>
      <p class="why-intelio-copy">{copyText}</p>
    </div>
  </div>
</section>

<style>
  .why-intelio-section {
    background: #ffffff;
    color: #000000;
    padding: 0;
    overflow: hidden;
  }

  .why-intelio-container {
    display: grid;
    grid-template-columns: 45% 55%;
    gap: 0;
    align-items: center;
    max-width: 100%;
    margin: 0;
    min-height: 500px;
  }

  .why-intelio-image {
    width: 100%;
    height: 100%;
    overflow: hidden;
    min-height: 500px;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .why-intelio-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .why-intelio-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: clamp(40px, 6vw, 60px);
    gap: 24px;
  }

  .why-intelio-headline {
    font-size: clamp(40px, 5vw, 56px);
    font-weight: 400;
    line-height: 1.2;
    color: #000000;
    margin: 0;
  }

  .why-intelio-stat {
    font-size: 18px;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.7);
    line-height: 1.8;
    margin: 0;
  }

  .why-intelio-stat strong {
    font-weight: 600;
    color: #000000;
  }

  .why-intelio-copy {
    font-size: 16px;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.7);
    line-height: 1.8;
    margin: 0;
  }

  @media (max-width: 1024px) {
    .why-intelio-container {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .why-intelio-image {
      order: -1;
      height: 350px;
      min-height: 350px;
    }

    .why-intelio-headline {
      font-size: clamp(36px, 4.5vw, 48px);
    }
  }

  @media (max-width: 768px) {
    .why-intelio-container {
      grid-template-columns: 1fr;
    }

    .why-intelio-image {
      height: 280px;
      min-height: 280px;
    }

    .why-intelio-content {
      padding: clamp(20px, 4vw, 40px);
    }

    .why-intelio-headline {
      font-size: clamp(28px, 3.5vw, 40px);
    }

    .why-intelio-stat,
    .why-intelio-copy {
      font-size: 15px;
    }
  }
</style>

