---
// McKinsey-style intro section for industry pages
// White background with centered headline and body copy

interface Props {
  headline: string;
  copy: string;
}

const { headline, copy } = Astro.props;
---

<section class="intro-section">
  <div class="intro-content">
    <h2 class="intro-headline">{headline}</h2>
    <p class="intro-copy">{copy}</p>
  </div>
</section>

<style>
  .intro-section {
    background: #ffffff;
    color: #000000;
    padding: clamp(100px, 12vw, 160px) 24px;
  }

  .intro-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .intro-headline {
    font-size: clamp(36px, 5vw, 52px);
    font-weight: 400;
    line-height: 1.2;
    margin-bottom: 32px;
    color: #000000;
  }

  .intro-copy {
    font-size: 18px;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.7);
    line-height: 1.8;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .intro-section {
      padding: clamp(80px, 10vw, 120px) 24px;
    }

    .intro-headline {
      margin-bottom: 24px;
    }

    .intro-copy {
      font-size: 16px;
    }
  }
</style>

