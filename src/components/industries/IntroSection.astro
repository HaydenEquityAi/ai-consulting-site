---
// McKinsey-style intro section for industry pages
// White background with centered headline, left-aligned copy, and centered CTA button

interface Props {
  headline: string;
  paragraph1: string;
  paragraph2: string;
  buttonText?: string;
  buttonLink?: string;
}

const { 
  headline, 
  paragraph1, 
  paragraph2, 
  buttonText = "Let's Build Together",
  buttonLink = "/contact"
} = Astro.props;
---

<section class="intro-section">
  <div class="intro-content">
    <h2 class="intro-headline">{headline}</h2>
    
    <div class="intro-copy-wrapper">
      <p class="intro-copy">{paragraph1}</p>
      <p class="intro-copy">{paragraph2}</p>
    </div>
    
    <a href={buttonLink} class="btn-intro">
      {buttonText}
    </a>
  </div>
</section>

<style>
  .intro-section {
    background: #ffffff;
    color: #000000;
    padding: clamp(50px, 8vw, 80px) 24px;
  }

  .intro-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .intro-headline {
    font-size: clamp(36px, 5vw, 52px);
    font-weight: 400;
    line-height: 1.2;
    margin-bottom: 24px;
    color: #000000;
    text-align: center;
    font-family: 'Georgia', 'Garamond', serif;
  }

  .intro-copy-wrapper {
    max-width: 700px;
    margin: 0 auto 24px auto;
    text-align: left;
  }

  .intro-copy {
    font-size: 18px;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.7);
    line-height: 1.8;
    margin-bottom: 24px;
  }

  .intro-copy:last-child {
    margin-bottom: 0;
  }

  .btn-intro {
    display: block;
    margin: 0 auto;
    padding: 14px 40px;
    background: #0052CC;
    color: #ffffff;
    border: none;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 0;
    text-decoration: none;
    text-align: center;
    width: fit-content;
  }

  .btn-intro:hover {
    background: #0041A3;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .intro-section {
      padding: clamp(30px, 5vw, 50px) 24px;
    }

    .intro-headline {
      margin-bottom: 32px;
    }

    .intro-copy-wrapper {
      margin-bottom: 32px;
    }

    .intro-copy {
      font-size: 16px;
    }

    .btn-intro {
      width: 100%;
    }
  }
</style>

