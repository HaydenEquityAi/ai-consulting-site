<script>
  (function() {
    const navbar = document.getElementById('navbar');
    const hamburger = document.getElementById('navbar-hamburger');
    const sidebar = document.getElementById('navbar-sidebar');
    const closeBtn = document.getElementById('sidebar-close');
    const backdrop = document.getElementById('navbar-backdrop');
    
    // Capabilities Mega Menu - Declare early so it's available everywhere
    const capabilitiesToggle = document.getElementById('capabilities-toggle');
    const capabilitiesMegaMenu = document.getElementById('capabilities-mega-menu');
    const megaMenuBackdrop = document.getElementById('mega-menu-backdrop');
    
    // Industries Mega Menu - Declare early so it's available everywhere
    const industriesToggle = document.getElementById('industries-toggle');
    const industriesMegaMenu = document.getElementById('industries-mega-menu');
    const industriesMegaMenuBackdrop = document.getElementById('industries-mega-menu-backdrop');
    
    // Update mega menu position based on sidebar state
    function updateMegaMenuPosition() {
      if (sidebar) {
        const sidebarWidth = sidebar.offsetWidth;
        const leftPosition = sidebar.classList.contains('open') ? sidebarWidth + 'px' : '0';
        
        if (capabilitiesMegaMenu) {
          capabilitiesMegaMenu.style.left = leftPosition;
        }
        if (industriesMegaMenu) {
          industriesMegaMenu.style.left = leftPosition;
        }
      }
    }
    
    function openMegaMenu(menu, toggle) {
      if (menu) {
        // Close other mega menus first
        if (capabilitiesMegaMenu && menu !== capabilitiesMegaMenu) {
          closeMegaMenu(capabilitiesMegaMenu, capabilitiesToggle);
        }
        if (industriesMegaMenu && menu !== industriesMegaMenu) {
          closeMegaMenu(industriesMegaMenu, industriesToggle);
        }
        
        // Ensure sidebar is open first
        if (sidebar && !sidebar.classList.contains('open')) {
          sidebar.classList.add('open');
          backdrop.classList.add('active');
          document.body.style.overflow = 'hidden';
        }
        
        updateMegaMenuPosition();
        menu.classList.add('open');
        if (toggle) {
          toggle.classList.add('active');
        }
      }
    }
    
    function closeMegaMenu(menu, toggle) {
      if (menu) {
        menu.classList.remove('open');
        if (toggle) {
          toggle.classList.remove('active');
        }
      }
    }
    
    // Scroll handler for navbar background
    let lastScroll = 0;
    function handleScroll() {
      const currentScroll = window.pageYOffset || document.documentElement.scrollTop;
      
      if (currentScroll > 50) {
        navbar.classList.remove('navbar-transparent');
        navbar.classList.add('navbar-scrolled');
      } else {
        navbar.classList.remove('navbar-scrolled');
        navbar.classList.add('navbar-transparent');
      }
      
      lastScroll = currentScroll;
    }
    
    window.addEventListener('scroll', handleScroll);
    handleScroll(); // Check on load
    
    // Update position on load, resize, and sidebar toggle
    updateMegaMenuPosition();
    window.addEventListener('resize', updateMegaMenuPosition);
    
    // Watch for sidebar state changes
    if (sidebar) {
      const observer = new MutationObserver(updateMegaMenuPosition);
      observer.observe(sidebar, { attributes: true, attributeFilter: ['class'] });
    }
    
    // Open sidebar
    if (hamburger && sidebar && backdrop) {
      hamburger.addEventListener('click', () => {
        sidebar.classList.add('open');
        backdrop.classList.add('active');
        document.body.style.overflow = 'hidden';
        // Update mega menu position when sidebar opens
        updateMegaMenuPosition();
      });
    }
    
    // Close sidebar
    function closeSidebar() {
      if (sidebar) sidebar.classList.remove('open');
      if (backdrop) backdrop.classList.remove('active');
      document.body.style.overflow = '';
      // Also close mega menus when sidebar closes
      closeMegaMenu(capabilitiesMegaMenu, capabilitiesToggle);
      closeMegaMenu(industriesMegaMenu, industriesToggle);
      // Update mega menu position when sidebar closes
      updateMegaMenuPosition();
    }
    
    if (closeBtn) {
      closeBtn.addEventListener('click', closeSidebar);
    }
    
    if (backdrop) {
      backdrop.addEventListener('click', closeSidebar);
    }
    
    // Close sidebar on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && sidebar && sidebar.classList.contains('open')) {
        closeSidebar();
      }
    });
    
    // Capabilities Mega Menu Event Handlers
    if (capabilitiesToggle && capabilitiesMegaMenu) {
      capabilitiesToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        
        // Toggle menu
        if (capabilitiesMegaMenu.classList.contains('open')) {
          closeMegaMenu(capabilitiesMegaMenu, capabilitiesToggle);
        } else {
          // Open sidebar if not open, then open mega menu
          openMegaMenu(capabilitiesMegaMenu, capabilitiesToggle);
        }
      });
    }
    
    if (megaMenuBackdrop) {
      megaMenuBackdrop.addEventListener('click', () => {
        closeMegaMenu(capabilitiesMegaMenu, capabilitiesToggle);
        // Also close sidebar if clicking backdrop
        if (sidebar && sidebar.classList.contains('open')) {
          closeSidebar();
        }
      });
    }
    
    // Industries Mega Menu Event Handlers
    if (industriesToggle && industriesMegaMenu) {
      industriesToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        
        // Toggle menu
        if (industriesMegaMenu.classList.contains('open')) {
          closeMegaMenu(industriesMegaMenu, industriesToggle);
        } else {
          // Open sidebar if not open, then open mega menu
          openMegaMenu(industriesMegaMenu, industriesToggle);
        }
      });
    }
    
    if (industriesMegaMenuBackdrop) {
      industriesMegaMenuBackdrop.addEventListener('click', () => {
        closeMegaMenu(industriesMegaMenu, industriesToggle);
        // Also close sidebar if clicking backdrop
        if (sidebar && sidebar.classList.contains('open')) {
          closeSidebar();
        }
      });
    }
    
    // Close mega menu on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        if (capabilitiesMegaMenu && capabilitiesMegaMenu.classList.contains('open')) {
          closeMegaMenu(capabilitiesMegaMenu, capabilitiesToggle);
        }
        if (industriesMegaMenu && industriesMegaMenu.classList.contains('open')) {
          closeMegaMenu(industriesMegaMenu, industriesToggle);
        }
      }
    });
    
    // Close mega menu when clicking outside (on navbar backdrop)
    if (backdrop) {
      backdrop.addEventListener('click', () => {
        closeMegaMenu(capabilitiesMegaMenu, capabilitiesToggle);
        closeMegaMenu(industriesMegaMenu, industriesToggle);
      });
    }
    
    // Remove old Industries submenu functionality - now handled by mega menu above
    
    // Close sidebar when clicking a link (except Sign In button and Capabilities toggle)
    const sidebarLinks = document.querySelectorAll('.sidebar-nav-item[href], .sidebar-submenu-item, .sidebar-footer-item:not(#sidebar-signin-btn)');
    sidebarLinks.forEach(link => {
      link.addEventListener('click', () => {
        // Don't close if capabilities menu is open
        if (!capabilitiesMegaMenu || !capabilitiesMegaMenu.classList.contains('open')) {
          closeSidebar();
        }
      });
    });
    
    // Sign In Modal Handler
    const signInBtn = document.getElementById('navbar-signin-btn');
    const sidebarSignInBtn = document.getElementById('sidebar-signin-btn');
    
    function openSignInModal() {
      if (window.openSignInModal) {
        window.openSignInModal();
      }
    }
    
    if (signInBtn) {
      signInBtn.addEventListener('click', (e) => {
        e.preventDefault();
        openSignInModal();
      });
    }
    
    // Also handle sidebar Sign In button
    if (sidebarSignInBtn) {
      sidebarSignInBtn.addEventListener('click', (e) => {
        e.preventDefault();
        closeSidebar();
        setTimeout(() => {
          openSignInModal();
        }, 300); // Wait for sidebar to close
      });
    }
  })();
</script>
