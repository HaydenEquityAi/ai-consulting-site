<style>
  /* ===== TOP NAVBAR ===== */

  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 20px 40px;
    transition: background 0.3s ease;
  }

  .navbar-transparent {
    background: transparent;
  }

  .navbar-scrolled {
    background: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(10px);
  }

  .navbar-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1400px;
    margin: 0 auto;
  }

  .navbar-left {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .navbar-hamburger {
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    color: #FFFFFF;
    cursor: pointer;
    padding: 8px;
    transition: opacity 0.2s ease;
    width: 44px;
    height: 44px;
  }

  .navbar-hamburger:hover {
    opacity: 0.7;
  }

  .navbar-logo {
    font-size: 24px;
    font-weight: 500;
    color: #FFFFFF;
    text-decoration: none;
    letter-spacing: -0.5px;
  }

  .navbar-logo:hover {
    opacity: 0.8;
  }

  .navbar-right {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  /* Text Links (Sign In, Subscribe) */
  .navbar-link {
    font-size: 14px;
    font-weight: 400;
    color: #FFFFFF;
    text-decoration: none;
    transition: opacity 0.2s ease;
    cursor: pointer;
    white-space: nowrap;
  }

  .navbar-link:hover {
    opacity: 0.7;
  }

  /* Divider */
  .navbar-divider {
    color: rgba(255, 255, 255, 0.3);
    font-size: 12px;
  }

  /* CTA Button (Contact) */
  .navbar-cta {
    padding: 12px 24px;
    background: #FFFFFF;
    color: #000000;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    border-radius: 0;
    transition: all 0.2s ease;
    cursor: pointer;
    white-space: nowrap;
  }

  .navbar-cta:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateY(-2px);
  }

  /* ===== SIDEBAR MENU ===== */

  .navbar-sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: 300px;
    height: 100vh;
    background: #0A0E1A; /* Deep black with subtle blue tint */
    z-index: 2000;
    overflow-y: auto;
    overflow-x: hidden;
    transform: translateX(-100%);
    transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 4px 0 30px rgba(0, 0, 0, 0.8);
    display: flex;
    flex-direction: column;
  }

  .navbar-sidebar.open {
    transform: translateX(0);
  }

  /* Close Button - Top Right */
  .sidebar-close-top {
    position: absolute;
    top: 20px;
    right: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    color: #FFFFFF;
    cursor: pointer;
    padding: 8px;
    transition: opacity 0.2s ease;
    z-index: 10;
    width: 48px;
    height: 48px;
  }

  .sidebar-close-top:hover {
    opacity: 0.7;
  }

  /* Branding Area */
  .sidebar-branding {
    padding: 40px 24px 32px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .sidebar-brand-link {
    text-decoration: none;
  }

  .sidebar-brand-text {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .sidebar-brand-main {
    display: block;
    font-size: 22px;
    font-weight: 600;
    color: #FFFFFF;
    letter-spacing: -0.5px;
  }

  .sidebar-brand-sub {
    display: block;
    font-size: 10px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 1.2px;
  }

  /* Main Navigation */
  .sidebar-nav {
    flex: 1;
    padding: 32px 0;
    display: flex;
    flex-direction: column;
  }

  .sidebar-nav-group {
    display: flex;
    flex-direction: column;
  }

  .sidebar-nav-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 24px;
    background: transparent;
    border: none;
    color: #FFFFFF;
    text-decoration: none;
    font-size: 16px;
    font-weight: 400;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
    width: 100%;
    text-align: left;
  }

  .sidebar-nav-label {
    display: block;
  }

  .sidebar-nav-item:hover {
    background: rgba(14, 165, 233, 0.08);
    color: #0EA5E9;
    padding-left: 32px;
  }

  /* Active State */
  .sidebar-nav-active {
    border-bottom: 2px solid #0EA5E9;
    color: #0EA5E9;
  }

  .sidebar-nav-active::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: #0EA5E9;
  }

  /* Expandable Items */
  .sidebar-nav-expandable {
    cursor: pointer;
  }

  .sidebar-nav-chevron {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0.7;
    flex-shrink: 0;
  }

  .sidebar-nav-chevron.open {
    transform: rotate(90deg);
  }

  /* Submenu */
  .sidebar-submenu {
    display: none;
    flex-direction: column;
    background: rgba(14, 165, 233, 0.06);
    border-left: 2px solid rgba(14, 165, 233, 0.3);
  }

  .sidebar-submenu.open {
    display: flex;
  }

  .sidebar-submenu-item {
    display: block;
    padding: 12px 32px;
    color: rgba(255, 255, 255, 0.65);
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    transition: all 0.2s ease;
  }

  .sidebar-submenu-item:hover {
    color: #0EA5E9;
    background: rgba(14, 165, 233, 0.1);
    padding-left: 40px;
  }

  /* Footer */
  .sidebar-footer {
    display: flex;
    flex-direction: column;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 24px 0;
    margin-top: auto;
  }

  .sidebar-footer-item {
    display: block;
    padding: 14px 24px;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    transition: all 0.2s ease;
  }

  .sidebar-footer-item:hover {
    color: #FFFFFF;
    background: rgba(255, 255, 255, 0.05);
    padding-left: 32px;
  }

  /* Scrollbar */
  .navbar-sidebar::-webkit-scrollbar {
    width: 8px;
  }

  .navbar-sidebar::-webkit-scrollbar-track {
    background: transparent;
  }

  .navbar-sidebar::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 4px;
  }

  .navbar-sidebar::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.4);
  }

  /* Backdrop */
  .navbar-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    z-index: 1500;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    cursor: pointer;
  }

  .navbar-backdrop.active {
    opacity: 1;
    visibility: visible;
  }

  /* ===== RESPONSIVE ===== */

  @media (max-width: 1024px) {
    .navbar-right {
      gap: 12px;
    }
    
    .navbar-link {
      font-size: 13px;
    }
  }

  @media (max-width: 768px) {
    .navbar {
      padding: 16px 24px;
    }
    
    .navbar-right {
      gap: 12px;
    }
    
    .navbar-divider {
      display: none;
    }
    
    .navbar-link {
      display: none;  /* Hide on mobile */
    }
    
    .navbar-cta {
      padding: 10px 20px;
      font-size: 13px;
    }
    
    .navbar-sidebar {
      width: 280px;
    }
    
    .sidebar-branding {
      padding: 32px 20px 24px;
    }
    
    .sidebar-brand-main {
      font-size: 20px;
    }
    
    .sidebar-nav {
      padding: 24px 0;
    }
    
    .sidebar-nav-item {
      padding: 14px 20px;
      font-size: 15px;
    }
    
    .sidebar-nav-item:hover {
      padding-left: 28px;
    }
    
    .sidebar-submenu-item {
      padding: 10px 28px;
      font-size: 13px;
    }
    
    .sidebar-submenu-item:hover {
      padding-left: 36px;
    }
    
    .sidebar-footer-item {
      padding: 12px 20px;
      font-size: 13px;
    }
    
    .sidebar-footer-item:hover {
      padding-left: 28px;
    }
    
    .sidebar-close-top {
      top: 16px;
      right: 16px;
    }
  }

  @media (max-width: 600px) {
    .navbar-sidebar {
      width: 100%;
    }
    
    .navbar-cta {
      padding: 8px 16px;
      font-size: 12px;
    }
  }

  /* ===== CAPABILITIES MEGA MENU ===== */

  .capabilities-mega-menu {
    position: fixed;
    top: 0;
    left: 300px;  /* Start after sidebar width */
    right: 0;
    bottom: 0;
    z-index: 1999;  /* Below sidebar (2000) but above backdrop (1500) */
    display: none;
    background: #FFFFFF;
    overflow-y: auto;
    box-shadow: -4px 0 30px rgba(0, 0, 0, 0.3);
    animation: slideInRight 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .capabilities-mega-menu.open {
    display: block;
  }
  
  /* ===== INDUSTRIES MEGA MENU ===== */
  
  .industries-mega-menu {
    position: fixed;
    top: 0;
    left: 300px;  /* Start after sidebar width */
    right: 0;
    bottom: 0;
    z-index: 1999;  /* Below sidebar (2000) but above backdrop (1500) */
    display: none;
    background: #FFFFFF;
    overflow-y: auto;
    box-shadow: -4px 0 30px rgba(0, 0, 0, 0.3);
    animation: slideInRight 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .industries-mega-menu.open {
    display: block;
  }
  
  /* When sidebar is closed, adjust positioning */
  .navbar-sidebar:not(.open) ~ .industries-mega-menu {
    left: 0;
  }

  /* Mega Menu Panel - Connected to sidebar on the right */
  .mega-menu-panel {
    position: relative;
    width: 100%;
    height: 100%;
    background: #FFFFFF;
    z-index: 1999;
    overflow-y: auto;
  }
  
  /* When sidebar is closed, adjust positioning */
  .navbar-sidebar:not(.open) ~ .capabilities-mega-menu {
    left: 0;
  }

  /* Mega Menu Content */
  .mega-menu-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 40px 60px;
    width: 100%;
  }

  /* Backdrop - covers page content behind sidebar and mega menu */
  .mega-menu-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
    z-index: 1998;  /* Behind mega menu (1999) but above page content */
    cursor: pointer;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }
  
  .capabilities-mega-menu.open .mega-menu-backdrop,
  .industries-mega-menu.open .mega-menu-backdrop {
    opacity: 1;
    visibility: visible;
  }

  /* Title & Headers */
  .mega-menu-title {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    font-size: 24px;
    font-weight: 600;
    color: #000000;
    margin: 0 0 32px 0;
    padding-bottom: 20px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .title-arrow {
    color: #0EA5E9;
    flex-shrink: 0;
  }

  /* Main Layout: Single Column */
  .mega-menu-main-layout {
    margin-bottom: 32px;
  }
  
  /* Left Side: Capabilities */
  .mega-menu-capabilities {
    display: flex;
    flex-direction: column;
  }
  
  /* Main Capabilities Grid */
  .mega-menu-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  .mega-menu-column {
