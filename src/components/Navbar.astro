<script>
  (function() {
    const navbar = document.getElementById('navbar');
    const hamburger = document.getElementById('navbar-hamburger');
    const sidebar = document.getElementById('navbar-sidebar');
    const closeBtn = document.getElementById('sidebar-close');
    const backdrop = document.getElementById('navbar-backdrop');
    
    // Scroll handler for navbar background
    let lastScroll = 0;
    function handleScroll() {
      const currentScroll = window.pageYOffset || document.documentElement.scrollTop;
      
      if (currentScroll > 50) {
        navbar.classList.remove('navbar-transparent');
        navbar.classList.add('navbar-scrolled');
      } else {
        navbar.classList.remove('navbar-scrolled');
        navbar.classList.add('navbar-transparent');
      }
      
      lastScroll = currentScroll;
    }
    
    window.addEventListener('scroll', handleScroll);
    handleScroll(); // Check on load
    
    // Open sidebar
    if (hamburger && sidebar && backdrop) {
      hamburger.addEventListener('click', () => {
        sidebar.classList.add('open');
        backdrop.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    }
    
    // Close sidebar
    function closeSidebar() {
      if (sidebar) sidebar.classList.remove('open');
      if (backdrop) backdrop.classList.remove('active');
      document.body.style.overflow = '';
    }
    
    if (closeBtn) {
      closeBtn.addEventListener('click', closeSidebar);
    }
    
    if (backdrop) {
      backdrop.addEventListener('click', closeSidebar);
    }
    
    // Close sidebar on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && sidebar && sidebar.classList.contains('open')) {
        closeSidebar();
      }
    });
    
    // Capabilities Mega Menu
    const capabilitiesToggle = document.getElementById('capabilities-toggle');
    const capabilitiesMegaMenu = document.getElementById('capabilities-mega-menu');
    const megaMenuClose = document.getElementById('mega-menu-close');
    const megaMenuBackdrop = document.getElementById('mega-menu-backdrop');
    
    function openMegaMenu() {
      if (capabilitiesMegaMenu) {
        capabilitiesMegaMenu.classList.add('open');
        document.body.style.overflow = 'hidden';
      }
    }
    
    function closeMegaMenu() {
      if (capabilitiesMegaMenu) {
        capabilitiesMegaMenu.classList.remove('open');
        document.body.style.overflow = '';
      }
    }
    
    if (capabilitiesToggle && capabilitiesMegaMenu) {
      capabilitiesToggle.addEventListener('click', () => {
        // Close sidebar first
        closeSidebar();
        // Then open mega menu after a short delay
        setTimeout(() => {
          openMegaMenu();
        }, 300);
      });
    }
    
    if (megaMenuClose) {
      megaMenuClose.addEventListener('click', closeMegaMenu);
    }
    
    if (megaMenuBackdrop) {
      megaMenuBackdrop.addEventListener('click', closeMegaMenu);
    }
    
    // Close mega menu on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && capabilitiesMegaMenu && capabilitiesMegaMenu.classList.contains('open')) {
        closeMegaMenu();
      }
    });
    
    // Close mega menu when clicking links inside
    const megaMenuLinks = capabilitiesMegaMenu ? capabilitiesMegaMenu.querySelectorAll('a') : [];
    megaMenuLinks.forEach(link => {
      link.addEventListener('click', () => {
        closeMegaMenu();
      });
    });
    
    // Expandable menu items
    const industriesToggle = document.getElementById('industries-toggle');
    const industriesSubmenu = document.getElementById('industries-submenu');
    
    if (industriesToggle && industriesSubmenu) {
      industriesToggle.addEventListener('click', () => {
        const isOpen = industriesSubmenu.classList.contains('open');
        const chevron = industriesToggle.querySelector('.sidebar-nav-chevron');
        
        if (isOpen) {
          industriesSubmenu.classList.remove('open');
          if (chevron) chevron.classList.remove('open');
        } else {
          industriesSubmenu.classList.add('open');
          if (chevron) chevron.classList.add('open');
        }
      });
    }
    
    // Close sidebar when clicking a link (except Sign In button)
    const sidebarLinks = document.querySelectorAll('.sidebar-nav-item[href], .sidebar-submenu-item, .sidebar-footer-item:not(#sidebar-signin-btn)');
    sidebarLinks.forEach(link => {
      link.addEventListener('click', () => {
        closeSidebar();
      });
    });
    
    // Sign In Modal Handler
    const signInBtn = document.getElementById('navbar-signin-btn');
    const sidebarSignInBtn = document.getElementById('sidebar-signin-btn');
    
    function openSignInModal() {
      if (window.openSignInModal) {
        window.openSignInModal();
      }
    }
    
    if (signInBtn) {
      signInBtn.addEventListener('click', (e) => {
        e.preventDefault();
        openSignInModal();
      });
    }
    
    // Also handle sidebar Sign In button
    if (sidebarSignInBtn) {
      sidebarSignInBtn.addEventListener('click', (e) => {
        e.preventDefault();
        closeSidebar();
        setTimeout(() => {
          openSignInModal();
        }, 300); // Wait for sidebar to close
      });
    }
  })();
</script>
