---
// Universal Navigation Bar Component
// Used across ALL pages of the site
---

<nav class="navbar navbar-transparent" id="navbar">
  <div class="navbar-container">
    <!-- Navbar Left: Hamburger + Logo -->
    <div class="navbar-left">
      <button class="navbar-hamburger" id="navbar-hamburger" aria-label="Toggle menu">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
      <a href="/" class="navbar-logo">intelio</a>
    </div>
    
    <!-- Navbar Right: Sign In, Subscribe, Contact -->
    <div class="navbar-right">
      <a href="/sign-in" class="navbar-link">Sign In</a>
      <span class="navbar-divider">|</span>
      <a href="/email-subscriptions" class="navbar-link">Subscribe</a>
      <a href="/contact" class="navbar-cta">Contact</a>
    </div>
  </div>
  
  <!-- Sidebar Menu -->
  <div class="navbar-sidebar" id="navbar-sidebar">
    <!-- Close Button - Top Right -->
    <button class="sidebar-close-top" id="sidebar-close" aria-label="Close menu">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    
    <!-- Branding Area -->
    <div class="sidebar-branding">
      <a href="/" class="sidebar-brand-link">
        <div class="sidebar-brand-text">
          <span class="sidebar-brand-main">intelio</span>
          <span class="sidebar-brand-sub">Intelligence Architects</span>
        </div>
      </a>
    </div>
    
    <!-- Main Navigation -->
    <nav class="sidebar-nav">
      <div class="sidebar-nav-group">
        <!-- Capabilities - Expandable -->
        <button class="sidebar-nav-item sidebar-nav-expandable" id="capabilities-toggle">
          <span class="sidebar-nav-label">Capabilities</span>
          <svg class="sidebar-nav-chevron" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
        <div class="sidebar-submenu" id="capabilities-submenu">
          <a href="/custom-ai-development/full-stack-systems" class="sidebar-submenu-item">Full-Stack Custom Systems</a>
          <a href="/custom-ai-development/ai-intelligence-integration" class="sidebar-submenu-item">AI & Intelligence Integration</a>
          <a href="/custom-ai-development/saas-product-development" class="sidebar-submenu-item">SaaS Product Development</a>
          <a href="/custom-ai-development/custom-enterprise-builds" class="sidebar-submenu-item">Custom Enterprise Builds</a>
          <a href="/ai-integration-automation/workflow-automation" class="sidebar-submenu-item">Workflow Orchestration</a>
          <a href="/ai-integration-automation/data-connectivity" class="sidebar-submenu-item">Data Infrastructure</a>
          <a href="/ai-integration-automation/system-integration" class="sidebar-submenu-item">Connected Systems</a>
          <a href="/ai-integration-automation/ai-enhanced-operations" class="sidebar-submenu-item">AI-Enhanced Operations</a>
        </div>
        
        <!-- Industries - Expandable -->
        <button class="sidebar-nav-item sidebar-nav-expandable" id="industries-toggle">
          <span class="sidebar-nav-label">Industries</span>
          <svg class="sidebar-nav-chevron" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
        <div class="sidebar-submenu" id="industries-submenu">
          <a href="/industries/commercial-real-estate" class="sidebar-submenu-item">Commercial Real Estate</a>
          <a href="/industries/professional-services" class="sidebar-submenu-item">Professional Services</a>
          <a href="/industries/construction" class="sidebar-submenu-item">Construction</a>
          <a href="/industries/healthcare" class="sidebar-submenu-item">Healthcare</a>
          <a href="/industries/property-management" class="sidebar-submenu-item">Property Management</a>
          <a href="/industries/financial-services" class="sidebar-submenu-item">Financial Services</a>
        </div>
        
        <!-- Standard Links -->
        <a href="/how-we-work" class="sidebar-nav-item">How We Work</a>
        <a href="/case-studies" class="sidebar-nav-item">Case Studies</a>
        <a href="/about-us" class="sidebar-nav-item">About Us</a>
        <a href="/resources" class="sidebar-nav-item">Resources</a>
      </div>
    </nav>
    
    <!-- Footer -->
    <div class="sidebar-footer">
      <a href="/sign-in" class="sidebar-footer-item">
        Sign In
      </a>
      <a href="/email-subscriptions" class="sidebar-footer-item">
        Email Subscriptions
      </a>
    </div>
  </div>
  
  <!-- Backdrop Overlay -->
  <div class="navbar-backdrop" id="navbar-backdrop"></div>
</nav>

<style>
  /* ===== TOP NAVBAR ===== */

  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 20px 40px;
    transition: background 0.3s ease;
  }

  .navbar-transparent {
    background: transparent;
  }

  .navbar-scrolled {
    background: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(10px);
  }

  .navbar-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1400px;
    margin: 0 auto;
  }

  .navbar-left {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .navbar-hamburger {
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    color: #FFFFFF;
    cursor: pointer;
    padding: 8px;
    transition: opacity 0.2s ease;
    width: 44px;
    height: 44px;
  }

  .navbar-hamburger:hover {
    opacity: 0.7;
  }

  .navbar-logo {
    font-size: 24px;
    font-weight: 500;
    color: #FFFFFF;
    text-decoration: none;
    letter-spacing: -0.5px;
  }

  .navbar-logo:hover {
    opacity: 0.8;
  }

  .navbar-right {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  /* Text Links (Sign In, Subscribe) */
  .navbar-link {
    font-size: 14px;
    font-weight: 400;
    color: #FFFFFF;
    text-decoration: none;
    transition: opacity 0.2s ease;
    cursor: pointer;
    white-space: nowrap;
  }

  .navbar-link:hover {
    opacity: 0.7;
  }

  /* Divider */
  .navbar-divider {
    color: rgba(255, 255, 255, 0.3);
    font-size: 12px;
  }

  /* CTA Button (Contact) */
  .navbar-cta {
    padding: 12px 24px;
    background: #FFFFFF;
    color: #000000;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    border-radius: 0;
    transition: all 0.2s ease;
    cursor: pointer;
    white-space: nowrap;
  }

  .navbar-cta:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateY(-2px);
  }

  /* ===== SIDEBAR MENU ===== */

  .navbar-sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: 300px;
    height: 100vh;
    background: #0A0E1A; /* Deep black with subtle blue tint */
    z-index: 2000;
    overflow-y: auto;
    overflow-x: hidden;
    transform: translateX(-100%);
    transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 4px 0 30px rgba(0, 0, 0, 0.8);
    display: flex;
    flex-direction: column;
  }

  .navbar-sidebar.open {
    transform: translateX(0);
  }

  /* Close Button - Top Right */
  .sidebar-close-top {
    position: absolute;
    top: 20px;
    right: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    color: #FFFFFF;
    cursor: pointer;
    padding: 8px;
    transition: opacity 0.2s ease;
    z-index: 10;
    width: 48px;
    height: 48px;
  }

  .sidebar-close-top:hover {
    opacity: 0.7;
  }

  /* Branding Area */
  .sidebar-branding {
    padding: 40px 24px 32px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .sidebar-brand-link {
    text-decoration: none;
  }

  .sidebar-brand-text {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .sidebar-brand-main {
    display: block;
    font-size: 22px;
    font-weight: 600;
    color: #FFFFFF;
    letter-spacing: -0.5px;
  }

  .sidebar-brand-sub {
    display: block;
    font-size: 10px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 1.2px;
  }

  /* Main Navigation */
  .sidebar-nav {
    flex: 1;
    padding: 32px 0;
    display: flex;
    flex-direction: column;
  }

  .sidebar-nav-group {
    display: flex;
    flex-direction: column;
  }

  .sidebar-nav-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 24px;
    background: transparent;
    border: none;
    color: #FFFFFF;
    text-decoration: none;
    font-size: 16px;
    font-weight: 400;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
    width: 100%;
    text-align: left;
  }

  .sidebar-nav-label {
    display: block;
  }

  .sidebar-nav-item:hover {
    background: rgba(14, 165, 233, 0.08);
    color: #0EA5E9;
    padding-left: 32px;
  }

  /* Active State */
  .sidebar-nav-active {
    border-bottom: 2px solid #0EA5E9;
    color: #0EA5E9;
  }

  .sidebar-nav-active::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: #0EA5E9;
  }

  /* Expandable Items */
  .sidebar-nav-expandable {
    cursor: pointer;
  }

  .sidebar-nav-chevron {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0.7;
    flex-shrink: 0;
  }

  .sidebar-nav-chevron.open {
    transform: rotate(90deg);
  }

  /* Submenu */
  .sidebar-submenu {
    display: none;
    flex-direction: column;
    background: rgba(14, 165, 233, 0.06);
    border-left: 2px solid rgba(14, 165, 233, 0.3);
  }

  .sidebar-submenu.open {
    display: flex;
  }

  .sidebar-submenu-item {
    display: block;
    padding: 12px 32px;
    color: rgba(255, 255, 255, 0.65);
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    transition: all 0.2s ease;
  }

  .sidebar-submenu-item:hover {
    color: #0EA5E9;
    background: rgba(14, 165, 233, 0.1);
    padding-left: 40px;
  }

  /* Footer */
  .sidebar-footer {
    display: flex;
    flex-direction: column;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 24px 0;
    margin-top: auto;
  }

  .sidebar-footer-item {
    display: block;
    padding: 14px 24px;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    transition: all 0.2s ease;
  }

  .sidebar-footer-item:hover {
    color: #FFFFFF;
    background: rgba(255, 255, 255, 0.05);
    padding-left: 32px;
  }

  /* Scrollbar */
  .navbar-sidebar::-webkit-scrollbar {
    width: 8px;
  }

  .navbar-sidebar::-webkit-scrollbar-track {
    background: transparent;
  }

  .navbar-sidebar::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 4px;
  }

  .navbar-sidebar::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.4);
  }

  /* Backdrop */
  .navbar-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    z-index: 1500;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    cursor: pointer;
  }

  .navbar-backdrop.active {
    opacity: 1;
    visibility: visible;
  }

  /* ===== RESPONSIVE ===== */

  @media (max-width: 1024px) {
    .navbar-right {
      gap: 12px;
    }
    
    .navbar-link {
      font-size: 13px;
    }
  }

  @media (max-width: 768px) {
    .navbar {
      padding: 16px 24px;
    }
    
    .navbar-right {
      gap: 12px;
    }
    
    .navbar-divider {
      display: none;
    }
    
    .navbar-link {
      display: none;  /* Hide on mobile */
    }
    
    .navbar-cta {
      padding: 10px 20px;
      font-size: 13px;
    }
    
    .navbar-sidebar {
      width: 280px;
    }
    
    .sidebar-branding {
      padding: 32px 20px 24px;
    }
    
    .sidebar-brand-main {
      font-size: 20px;
    }
    
    .sidebar-nav {
      padding: 24px 0;
    }
    
    .sidebar-nav-item {
      padding: 14px 20px;
      font-size: 15px;
    }
    
    .sidebar-nav-item:hover {
      padding-left: 28px;
    }
    
    .sidebar-submenu-item {
      padding: 10px 28px;
      font-size: 13px;
    }
    
    .sidebar-submenu-item:hover {
      padding-left: 36px;
    }
    
    .sidebar-footer-item {
      padding: 12px 20px;
      font-size: 13px;
    }
    
    .sidebar-footer-item:hover {
      padding-left: 28px;
    }
    
    .sidebar-close-top {
      top: 16px;
      right: 16px;
    }
  }

  @media (max-width: 600px) {
    .navbar-sidebar {
      width: 100%;
    }
    
    .navbar-cta {
      padding: 8px 16px;
      font-size: 12px;
    }
  }
</style>

<script>
  (function() {
    const navbar = document.getElementById('navbar');
    const hamburger = document.getElementById('navbar-hamburger');
    const sidebar = document.getElementById('navbar-sidebar');
    const closeBtn = document.getElementById('sidebar-close');
    const backdrop = document.getElementById('navbar-backdrop');
    
    // Scroll handler for navbar background
    let lastScroll = 0;
    function handleScroll() {
      const currentScroll = window.pageYOffset || document.documentElement.scrollTop;
      
      if (currentScroll > 50) {
        navbar.classList.remove('navbar-transparent');
        navbar.classList.add('navbar-scrolled');
      } else {
        navbar.classList.remove('navbar-scrolled');
        navbar.classList.add('navbar-transparent');
      }
      
      lastScroll = currentScroll;
    }
    
    window.addEventListener('scroll', handleScroll);
    handleScroll(); // Check on load
    
    // Open sidebar
    if (hamburger && sidebar && backdrop) {
      hamburger.addEventListener('click', () => {
        sidebar.classList.add('open');
        backdrop.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    }
    
    // Close sidebar
    function closeSidebar() {
      if (sidebar) sidebar.classList.remove('open');
      if (backdrop) backdrop.classList.remove('active');
      document.body.style.overflow = '';
    }
    
    if (closeBtn) {
      closeBtn.addEventListener('click', closeSidebar);
    }
    
    if (backdrop) {
      backdrop.addEventListener('click', closeSidebar);
    }
    
    // Close sidebar on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && sidebar && sidebar.classList.contains('open')) {
        closeSidebar();
      }
    });
    
    // Expandable menu items
    const capabilitiesToggle = document.getElementById('capabilities-toggle');
    const capabilitiesSubmenu = document.getElementById('capabilities-submenu');
    const industriesToggle = document.getElementById('industries-toggle');
    const industriesSubmenu = document.getElementById('industries-submenu');
    
    if (capabilitiesToggle && capabilitiesSubmenu) {
      capabilitiesToggle.addEventListener('click', () => {
        const isOpen = capabilitiesSubmenu.classList.contains('open');
        const chevron = capabilitiesToggle.querySelector('.sidebar-nav-chevron');
        
        if (isOpen) {
          capabilitiesSubmenu.classList.remove('open');
          if (chevron) chevron.classList.remove('open');
        } else {
          capabilitiesSubmenu.classList.add('open');
          if (chevron) chevron.classList.add('open');
        }
      });
    }
    
    if (industriesToggle && industriesSubmenu) {
      industriesToggle.addEventListener('click', () => {
        const isOpen = industriesSubmenu.classList.contains('open');
        const chevron = industriesToggle.querySelector('.sidebar-nav-chevron');
        
        if (isOpen) {
          industriesSubmenu.classList.remove('open');
          if (chevron) chevron.classList.remove('open');
        } else {
          industriesSubmenu.classList.add('open');
          if (chevron) chevron.classList.add('open');
        }
      });
    }
    
    // Close sidebar when clicking a link
    const sidebarLinks = document.querySelectorAll('.sidebar-nav-item[href], .sidebar-submenu-item, .sidebar-footer-item');
    sidebarLinks.forEach(link => {
      link.addEventListener('click', () => {
        closeSidebar();
      });
    });
  })();
</script>
