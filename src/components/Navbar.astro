<style>
  /* ================================
     NAVIGATION BASE
     ================================ */

  .main-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: #FFFFFF;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
    height: 72px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* Logo */
  .nav-logo {
    font-size: 22px;
    font-weight: 500;
    color: #000000;
    text-decoration: none;
    letter-spacing: -0.02em;
  }

  /* Nav Items Container */
  .nav-items {
    display: flex;
    align-items: center;
    gap: 8px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  /* Individual Nav Item */
  .nav-item {
    position: relative;
  }

  /* Nav Link */
  .nav-link {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 8px 16px;
    font-size: 15px;
    font-weight: 450;
    color: #000000;
    text-decoration: none;
    background: none;
    border: none;
    cursor: pointer;
    transition: color 0.15s ease;
    font-family: inherit;
  }

  .nav-link:hover {
    color: #6366F1;
  }

  .nav-chevron {
    width: 14px;
    height: 14px;
    transition: transform 0.2s ease;
  }

  /* Rotate chevron when menu is open */
  .nav-item.active .nav-chevron {
    transform: rotate(180deg);
  }

  /* CTA Button */
  .nav-cta {
    padding: 10px 20px;
    font-size: 14px;
    font-weight: 500;
    color: #FFFFFF;
    background: #000000;
    border-radius: 4px;
    text-decoration: none;
    transition: background 0.15s ease;
  }

  .nav-cta:hover {
    background: #1a1a1a;
  }

  /* ================================
     MEGA MENU (Capabilities)
     ================================ */

  .megamenu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    padding-top: 12px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, visibility 0.2s ease;
    pointer-events: none;
  }

  .nav-item.has-megamenu:hover .megamenu,
  .nav-item.has-megamenu.active .megamenu {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  .megamenu-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 48px;
    background: #FFFFFF;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 8px;
    padding: 32px 40px;
    min-width: 480px;
    box-shadow: 
      0 4px 6px rgba(0, 0, 0, 0.04),
      0 10px 40px rgba(0, 0, 0, 0.08);
  }

  /* Column */
  .megamenu-column {
    min-width: 200px;
  }

  /* Column Heading */
  .megamenu-heading {
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    color: #6366F1;
    margin-bottom: 16px;
    padding-bottom: 12px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  /* Links List */
  .megamenu-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .megamenu-links li a {
    display: block;
    padding: 10px 0;
    font-size: 15px;
    font-weight: 450;
    color: #000000;
    text-decoration: none;
    transition: color 0.15s ease, padding-left 0.15s ease;
  }

  .megamenu-links li a:hover {
    color: #6366F1;
    padding-left: 4px;
  }

  /* ================================
     SIMPLE DROPDOWN (Industries)
     ================================ */

  .dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    padding-top: 12px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, visibility 0.2s ease;
    pointer-events: none;
  }

  .nav-item.has-dropdown:hover .dropdown,
  .nav-item.has-dropdown.active .dropdown {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  .dropdown-links {
    list-style: none;
    margin: 0;
    padding: 16px 0;
    background: #FFFFFF;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 8px;
    min-width: 220px;
    box-shadow: 
      0 4px 6px rgba(0, 0, 0, 0.04),
      0 10px 40px rgba(0, 0, 0, 0.08);
  }

  .dropdown-links li a {
    display: block;
    padding: 10px 24px;
    font-size: 15px;
    font-weight: 450;
    color: #000000;
    text-decoration: none;
    transition: background 0.15s ease, color 0.15s ease;
  }

  .dropdown-links li a:hover {
    background: #F8F8F8;
    color: #6366F1;
  }

  /* ================================
     MOBILE NAVIGATION
     ================================ */

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    padding: 8px;
    background: none;
    border: none;
    cursor: pointer;
  }

  .mobile-menu-toggle span {
    width: 24px;
    height: 2px;
    background: #000000;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }

  .mobile-menu {
    display: none;
    padding: 24px;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
    background: #FFFFFF;
  }

  .mobile-nav {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .mobile-accordion {
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    padding-bottom: 8px;
    margin-bottom: 8px;
  }

  .mobile-accordion-toggle {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 0;
    font-size: 15px;
    font-weight: 450;
    color: #000000;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
  }

  .accordion-icon {
    font-size: 18px;
    transition: transform 0.2s ease;
  }

  .mobile-accordion.active .accordion-icon {
    transform: rotate(45deg);
  }

  .mobile-accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .mobile-accordion.active .mobile-accordion-content {
    max-height: 1000px;
  }

  .mobile-accordion-content.hidden {
    display: none;
  }

  .mobile-accordion-section {
    padding: 8px 0 8px 16px;
  }

  .mobile-accordion-heading {
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    color: #6366F1;
    margin-bottom: 8px;
    padding-bottom: 8px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  .mobile-link {
    display: block;
    padding: 10px 0;
    font-size: 15px;
    font-weight: 450;
    color: #000000;
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .mobile-link:hover {
    color: #6366F1;
  }

  .mobile-cta {
    display: block;
    padding: 12px 20px;
    margin-top: 16px;
    font-size: 14px;
    font-weight: 500;
    color: #FFFFFF;
    background: #000000;
    border-radius: 4px;
    text-decoration: none;
    text-align: center;
    transition: background 0.15s ease;
  }

  .mobile-cta:hover {
    background: #1a1a1a;
  }

  @media (max-width: 968px) {
    .nav-items,
    .nav-cta {
      display: none;
    }
    
    .mobile-menu-toggle {
      display: flex;
    }
    
    .mobile-menu.active {
      display: block;
    }
  }

  @media (min-width: 969px) {
    .mobile-menu-toggle,
    .mobile-menu {
      display: none;
    }
  }
</style>

<script>
  (function() {
    // Toggle mega menu on click (for touch devices and accessibility)
    document.querySelectorAll('.nav-item.has-megamenu > button, .nav-item.has-dropdown > button').forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const navItem = e.target.closest('.nav-item');
        const isActive = navItem.classList.contains('active');
        
        // Close all other open menus
        document.querySelectorAll('.nav-item.active').forEach(item => {
          item.classList.remove('active');
          item.querySelector('button')?.setAttribute('aria-expanded', 'false');
        });
        
        // Toggle current menu
        if (!isActive) {
          navItem.classList.add('active');
          button.setAttribute('aria-expanded', 'true');
        } else {
          button.setAttribute('aria-expanded', 'false');
        }
      });
    });

    // Close menus when clicking outside
    document.addEventListener('click', (e) => {
      if (!e.target.closest('.nav-item')) {
        document.querySelectorAll('.nav-item.active').forEach(item => {
          item.classList.remove('active');
          item.querySelector('button')?.setAttribute('aria-expanded', 'false');
        });
      }
    });

    // Close menus on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.querySelectorAll('.nav-item.active').forEach(item => {
          item.classList.remove('active');
          item.querySelector('button')?.setAttribute('aria-expanded', 'false');
        });
      }
    });

    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const isActive = mobileMenu.classList.contains('active');
        mobileMenu.classList.toggle('active');
        mobileMenuButton.setAttribute('aria-expanded', isActive ? 'false' : 'true');
        
        // Toggle body scroll lock
        if (isActive) {
          document.body.classList.remove('menu-open');
        } else {
          document.body.classList.add('menu-open');
        }
      });

      // Close mobile menu when clicking outside
      document.addEventListener('click', (e) => {
        if (!mobileMenu.contains(e.target) && !mobileMenuButton.contains(e.target) && mobileMenu.classList.contains('active')) {
          mobileMenu.classList.remove('active');
          mobileMenuButton.setAttribute('aria-expanded', 'false');
          document.body.classList.remove('menu-open');
        }
      });
    }

    // Mobile accordion toggles
    const capabilitiesToggle = document.querySelector('.capabilities-toggle');
    const capabilitiesSubmenu = document.querySelector('.capabilities-submenu');
    const industriesToggle = document.querySelector('.industries-toggle');
    const industriesSubmenu = document.querySelector('.industries-submenu');

    if (capabilitiesToggle && capabilitiesSubmenu) {
      capabilitiesToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const accordion = capabilitiesToggle.closest('.mobile-accordion');
        accordion?.classList.toggle('active');
        capabilitiesSubmenu.classList.toggle('hidden');
      });
    }

    if (industriesToggle && industriesSubmenu) {
      industriesToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const accordion = industriesToggle.closest('.mobile-accordion');
        accordion?.classList.toggle('active');
        industriesSubmenu.classList.toggle('hidden');
      });
    }

    // Close mobile menu when a link is clicked
    const mobileLinks = document.querySelectorAll('.mobile-link');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (mobileMenu) {
          mobileMenu.classList.remove('active');
          mobileMenuButton?.setAttribute('aria-expanded', 'false');
          document.body.classList.remove('menu-open');
        }
      });
    });
  })();
</script>

<style>
  /* Prevent body scroll when mobile menu is open */
  body.menu-open {
    overflow: hidden;
  }
</style>
