---
import Layout from "../../layouts/Layout.astro";
import HealthcareHero from "../../components/industries/HealthcareHero.astro";
import IntroSection from "../../components/industries/IntroSection.astro";
import HealthcareMoment from "../../components/industries/HealthcareMoment.astro";
import HealthcareChallenge from "../../components/industries/HealthcareChallenge.astro";
import HealthcareApproach from "../../components/industries/HealthcareApproach.astro";
import HealthcareCapabilities from "../../components/industries/HealthcareCapabilities.astro";
import WhyInterlioSection from "../../components/industries/WhyInterlioSection.astro";
import HealthcareEngagementModels from "../../components/industries/HealthcareEngagementModels.astro";
import HealthcareCaseStudies from "../../components/industries/HealthcareCaseStudies.astro";
import HealthcareCta from "../../components/industries/HealthcareCta.astro";
import SectionDivider from "../../components/industries/SectionDivider.astro";
import PageNavDots from "../../components/industries/PageNavDots.astro";

const pageTitle = "Healthcare Software | Intelio";
const pageDescription = "AI-powered systems for healthcare operations, patient intake automation, and clinical workflow coordination. Purpose-built for healthcare organizations.";
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="cre-industry-page">
    <HealthcareHero />
    <IntroSection 
      headline="Speed is competitive advantage in healthcare"
      paragraph1="Healthcare is a game of velocity. The fastest organizations process patient intake quicker, reduce appointment wait times, and deliver care without bottlenecks. But velocity alone isn't enough—you still need quality, accuracy, and patient safety."
      paragraph2="Most healthcare organizations face a painful tradeoff: move fast and risk quality, or maintain rigor and frustrate patients with long wait times. Intelio eliminates this choice by building purpose-built systems that let you deliver care at the speed patients expect without sacrificing accuracy or clinical control."
      buttonText="Let's Build Together"
      buttonLink="/contact"
    />
    <HealthcareMoment />
    <SectionDivider variant="white-to-black" />
    <HealthcareChallenge />
    <SectionDivider />
    <HealthcareApproach />
    <SectionDivider />
    <HealthcareCapabilities />
    <SectionDivider variant="white-to-black" />
    <WhyInterlioSection
      headline="Why intelio for Healthcare"
      statText="We've helped <strong>35+ healthcare organizations</strong> build systems that eliminate operational friction and accelerate patient care delivery."
      copyText="Our systems are purpose-built specifically for how healthcare teams operate—from patient intake through clinical coordination. We don't force-fit generic software into your workflow. Every feature is engineered to eliminate friction, automate drudgery, and create competitive advantage."
      imageUrl="/logos/intelio-CRE.png"
      imageAlt="Why intelio for Healthcare"
    />
    <SectionDivider variant="white-to-black" />
    <HealthcareCaseStudies />
    <SectionDivider />
    <HealthcareEngagementModels />
    <SectionDivider />
    <HealthcareCta />
    <PageNavDots />
  </main>
</Layout>

<style>
  .cre-industry-page {
    background: #FFFFFF;
    color: #000000;
  }
</style>

