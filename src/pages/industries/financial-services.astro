---
import Layout from "../../layouts/Layout.astro";
import FinancialServicesHero from "../../components/industries/FinancialServicesHero.astro";
import IntroSection from "../../components/industries/IntroSection.astro";
import FinancialServicesMoment from "../../components/industries/FinancialServicesMoment.astro";
import FinancialServicesChallenge from "../../components/industries/FinancialServicesChallenge.astro";
import FinancialServicesApproach from "../../components/industries/FinancialServicesApproach.astro";
import FinancialServicesCapabilities from "../../components/industries/FinancialServicesCapabilities.astro";
import WhyInterlioSection from "../../components/industries/WhyInterlioSection.astro";
import FinancialServicesEngagementModels from "../../components/industries/FinancialServicesEngagementModels.astro";
import FinancialServicesCaseStudies from "../../components/industries/FinancialServicesCaseStudies.astro";
import FinancialServicesCta from "../../components/industries/FinancialServicesCta.astro";
import SectionDivider from "../../components/industries/SectionDivider.astro";
import PageNavDots from "../../components/industries/PageNavDots.astro";

const pageTitle = "Financial Services Software | Intelio";
const pageDescription = "AI-powered systems for financial services operations, portfolio analysis automation, and client reporting. Purpose-built for financial services firms.";
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="cre-industry-page">
    <FinancialServicesHero />
    <IntroSection 
      headline="Speed is competitive advantage in financial services"
      paragraph1="Financial services is a game of velocity. The fastest firms analyze opportunities faster, execute trades quicker, and deliver client insights before competitors. But velocity alone isn't enough—you still need accuracy, compliance, and client trust."
      paragraph2="Most financial services firms face a painful tradeoff: move fast and risk accuracy, or maintain rigor and lose deals. Intelio eliminates this choice by building purpose-built systems that let you move at market speed without sacrificing accuracy or compliance."
      buttonText="Let's Build Together"
      buttonLink="/contact"
    />
    <FinancialServicesMoment />
    <SectionDivider variant="white-to-black" />
    <FinancialServicesChallenge />
    <SectionDivider />
    <FinancialServicesApproach />
    <SectionDivider />
    <FinancialServicesCapabilities />
    <SectionDivider variant="white-to-black" />
    <WhyInterlioSection
      headline="Why intelio for Financial Services"
      statText="We've helped <strong>40+ financial services firms</strong> build systems that eliminate operational friction and accelerate investment decision-making."
      copyText="Our systems are purpose-built specifically for how financial teams operate—from market research through investor reporting. We don't force-fit generic software into your workflow. Every feature is engineered to eliminate friction, automate drudgery, and create competitive advantage."
      imageUrl="/logos/intelio-CRE.png"
      imageAlt="Why intelio for Financial Services"
    />
    <SectionDivider variant="white-to-black" />
    <FinancialServicesCaseStudies />
    <SectionDivider />
    <FinancialServicesEngagementModels />
    <SectionDivider />
    <FinancialServicesCta />
    <PageNavDots />
  </main>
</Layout>

<style>
  .cre-industry-page {
    background: #FFFFFF;
    color: #000000;
  }
</style>

