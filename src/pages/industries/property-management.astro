---
import Layout from "../../layouts/Layout.astro";
import PMHero from "../../components/industries/PMHero.astro";
import IntroSection from "../../components/industries/IntroSection.astro";
import PMMoment from "../../components/industries/PMMoment.astro";
import PMChallenge from "../../components/industries/PMChallenge.astro";
import PMApproach from "../../components/industries/PMApproach.astro";
import PMCapabilities from "../../components/industries/PMCapabilities.astro";
import WhyInterlioSection from "../../components/industries/WhyInterlioSection.astro";
import PMEngagementModels from "../../components/industries/PMEngagementModels.astro";
import PMCaseStudies from "../../components/industries/PMCaseStudies.astro";
import PMCta from "../../components/industries/PMCta.astro";
import SectionDivider from "../../components/industries/SectionDivider.astro";
import PageNavDots from "../../components/industries/PageNavDots.astro";

const pageTitle = "Commercial Real Estate Software | Intelio";
const pageDescription = "AI-powered systems for commercial real estate deal sourcing, underwriting automation, and portfolio management. Purpose-built for CRE operations.";
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="cre-industry-page">
    <PMHero />
    <IntroSection 
      headline="Speed is competitive advantage in commercial real estate"
      paragraph1="Commercial real estate is a game of velocity. The fastest firms source more deals, underwrite faster, and close more transactions. But velocity alone isn't enough—you still need rigor, accuracy, and investor confidence."
      paragraph2="Most CRE firms face a painful tradeoff: move fast and risk quality, or maintain rigor and lose deals. Intelio eliminates this choice by building purpose-built systems that let you move at market speed without sacrificing accuracy or operational control."
      buttonText="Let's Build Together"
      buttonLink="/contact"
    />
    <PMMoment />
    <SectionDivider variant="white-to-black" />
    <PMChallenge />
    <SectionDivider />
    <PMApproach />
    <SectionDivider />
    <PMCapabilities />
    <SectionDivider variant="white-to-black" />
    <WhyInterlioSection
      headline="Why intelio for Commercial Real Estate"
      statText="We've helped <strong>50+ commercial real estate firms</strong> build systems that eliminate operational friction and accelerate deal velocity."
      copyText="Our systems are purpose-built specifically for how CRE teams operate—from sourcing through investor reporting. We don't force-fit generic software into your workflow. Every feature is engineered to eliminate friction, automate drudgery, and create competitive advantage."
      imageUrl="/logos/intelio-CRE.png"
      imageAlt="Why intelio for Commercial Real Estate"
    />
    <SectionDivider variant="white-to-black" />
    <PMCaseStudies />
    <SectionDivider />
    <PMEngagementModels />
    <SectionDivider />
    <PMCta />
    <PageNavDots />
  </main>
</Layout>

<style>
  .cre-industry-page {
    background: #FFFFFF;
    color: #000000;
  }
</style>

