---
import Layout from "../../layouts/Layout.astro";
import { getPostBySlug, mapTagToCategory, getCardColor } from "../../lib/hashnode";

export async function getStaticPaths() {
  // This will be populated at build time
  // For now, we'll fetch all posts to generate paths
  const { getAllPosts } = await import("../../lib/hashnode");
  const posts = await getAllPosts();
  
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: Awaited<ReturnType<typeof getPostBySlug>>;
}

const { post } = Astro.props;

if (!post) {
  return Astro.redirect("/blog");
}

const category = mapTagToCategory(post.tags[0]?.name || "");
const cardColor = getCardColor(category);

function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString("en-US", { 
    month: "long", 
    day: "numeric", 
    year: "numeric" 
  });
}
---

<Layout title={`${post.title} - Blog`}>
  <main class="pt-24">
    <!-- Article Header -->
    <article class="max-w-4xl mx-auto px-6 py-12">
      <!-- Back to Blog -->
      <a href="/blog" class="inline-flex items-center gap-2 text-gray-600 hover:text-black transition-colors mb-8">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        <span>Back to Blog</span>
      </a>

      <!-- Article Meta -->
      <div class="mb-8">
        <div class="flex items-center gap-3 mb-4">
          <span class={`text-${cardColor}-500 text-sm font-medium px-3 py-1 rounded-full bg-${cardColor}-50`}>
            {category}
          </span>
          <span class="text-gray-400 text-sm">·</span>
          <span class="text-gray-500 text-sm">{formatDate(post.publishedAt)}</span>
          <span class="text-gray-400 text-sm">·</span>
          <span class="text-gray-500 text-sm">{post.readTimeInMinutes} min read</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-semibold mb-6">{post.title}</h1>
        
        {post.brief && (
          <p class="text-xl text-gray-600 mb-8">{post.brief}</p>
        )}

        {post.author && (
          <div class="flex items-center gap-4">
            {post.author.profilePicture ? (
              <img src={post.author.profilePicture} alt={post.author.name} class="w-12 h-12 rounded-full" />
            ) : (
              <div class="w-12 h-12 bg-gray-200 rounded-full"></div>
            )}
            <div>
              <div class="font-medium">{post.author.name}</div>
              <div class="text-gray-500 text-sm">@{post.author.username}</div>
            </div>
          </div>
        )}
      </div>

      <!-- Cover Image -->
      {post.coverImage?.url && (
        <div class="mb-12 rounded-2xl overflow-hidden">
          <img 
            src={post.coverImage.url} 
            alt={post.title}
            class="w-full h-auto"
          />
        </div>
      )}

      <!-- Article Content -->
      <div 
        class="prose prose-lg max-w-none prose-headings:font-semibold prose-headings:text-gray-900 prose-p:text-gray-700 prose-p:leading-relaxed prose-a:text-blue-600 prose-a:no-underline hover:prose-a:underline prose-strong:text-gray-900 prose-code:text-gray-800 prose-code:bg-gray-100 prose-code:px-1 prose-code:py-0.5 prose-code:rounded prose-pre:bg-gray-900 prose-pre:text-gray-100 prose-img:rounded-xl prose-img:shadow-lg prose-blockquote:border-l-4 prose-blockquote:border-gray-300 prose-blockquote:pl-4 prose-blockquote:italic prose-ul:list-disc prose-ol:list-decimal prose-li:my-2"
        set:html={post.content.html}
      />

      <!-- Tags -->
      {post.tags.length > 0 && (
        <div class="mt-12 pt-8 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-500 mb-4">Tags</h3>
          <div class="flex flex-wrap gap-2">
            {post.tags.map(tag => (
              <span class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full">
                {tag.name}
              </span>
            ))}
          </div>
        </div>
      )}

      <!-- Back to Blog Link -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <a href="/blog" class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span>Back to Blog</span>
        </a>
      </div>
    </article>

    <!-- Newsletter Signup -->
    <section class="py-16 px-6 bg-gray-50 mt-16">
      <div class="max-w-2xl mx-auto">
        <div class="bg-white border border-gray-200 rounded-2xl p-12 text-center">
          <h2 class="text-2xl font-medium mb-4">Subscribe to our newsletter</h2>
          <p class="text-gray-600 mb-8">
            Get the latest AI insights, tutorials, and industry updates delivered to your inbox weekly.
          </p>
          <form class="flex gap-2 max-w-md mx-auto">
            <input type="email" placeholder="Enter your email" class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <button type="submit" class="px-6 py-3 bg-black text-white text-sm font-medium rounded-lg hover:bg-gray-800 transition-colors">
              Subscribe
            </button>
          </form>
          <p class="text-xs text-gray-400 mt-4">No spam. Unsubscribe anytime.</p>
        </div>
      </div>
    </section>
  </main>
</Layout>

