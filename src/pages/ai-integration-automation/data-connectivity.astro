    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    object-fit: cover;
  }

  /* Ensure video containers work on mobile */
  @media (max-width: 768px) {
    section video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  /* iOS Safari video fixes */
