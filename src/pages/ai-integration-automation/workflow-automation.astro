    <div class="max-w-7xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12 mb-16">
        <!-- Left Column: What You Get -->
        <div>
          <h2 class="text-4xl md:text-5xl text-gray-900 mb-12">What You Get</h2>
          <ul class="space-y-6">
