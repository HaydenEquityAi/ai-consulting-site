---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Custom Internal Platforms - intelio">
<main>
  <!-- VIDEO HERO SECTION - PREMIUM & EXCLUSIVE -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden bg-gradient-to-br from-gray-900 via-slate-900 to-gray-900">
    <!-- Video Background -->
    <video 
      autoplay 
      loop 
      muted 
      playsinline
      class="absolute inset-0 w-full h-full object-cover opacity-40"
    >
      <source src="/logos/internal-tooling.mp4" type="video/mp4">
    </video>
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/95 via-gray-900/80 to-gray-900/60 z-[1]"></div>
    
    <!-- Subtle noise texture -->
    <div class="absolute inset-0 opacity-[0.02] mix-blend-overlay z-[2]" style="background-image: url('data:image/svg+xml,%3Csvg width=\'100\' height=\'100\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cfilter id=\'noise\'%3E%3CfeTurbulence type=\'fractalNoise\' baseFrequency=\'0.9\' numOctaves=\'4\'/%3E%3C/filter%3E%3Crect width=\'100%25\' height=\'100%25\' filter=\'url(%23noise)\'/%3E%3C/svg%3E');"></div>

    <!-- Content positioned over video -->
    <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 py-24 w-full">
      <div class="max-w-3xl">
        <!-- Premium Badge -->
        <div class="mb-6">
          <span class="text-blue-400 text-sm font-bold tracking-[0.2em] uppercase">
            Select Engagements
          </span>
        </div>
        
        <!-- Headline -->
        <h1 class="text-5xl lg:text-7xl font-bold text-white leading-[1.1] mb-6">
          Custom Internal Platforms
        </h1>
        
        <!-- Subtitle -->
        <p class="text-xl lg:text-2xl text-gray-200 mb-4 leading-relaxed">
          Purpose-built systems when off-the-shelf tools don't fit.
        </p>
        
        <!-- Additional context -->
        <p class="text-lg text-gray-400 mb-10 max-w-2xl">
          For organizations operating at scale or complexity where standard solutions break down.
        </p>
        
        <!-- CTAs -->
        <div class="flex flex-wrap gap-4">
          <a href="/contact" class="inline-flex items-center px-8 py-4 bg-blue-600 hover:bg-blue-500 text-white text-lg font-semibold rounded-xl shadow-lg hover:shadow-2xl hover:scale-105 transition-all duration-300">
            Discuss Your Challenge
          </a>
          <a href="#when-needed" class="inline-flex items-center px-8 py-4 border-2 border-white/30 hover:border-white/60 text-white text-lg font-semibold rounded-xl hover:bg-white/10 backdrop-blur-sm transition-all duration-300">
            Is This Right for You?
          </a>
        </div>
      </div>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
      <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- CREDIBILITY BAR -->
  <section class="py-12 px-6 bg-white border-b border-gray-100">
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-col items-center justify-center gap-6">
        <p class="text-sm text-gray-500 font-medium">Trusted by operations leaders at:</p>
        <!-- Client Logos - Infinite Scroll -->
        <div class="logo-marquee-container w-full">
          <div class="logo-marquee-track">
            <!-- First set of logos -->
            <div class="logo-marquee-item">
              <img src="/logos/Newmark-logo.png" alt="Newmark" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium" style="display:none;">Newmark</span>
            </div>
            <div class="logo-marquee-item">
              <img src="/logos/hhp-grey-logo.png" alt="HHP" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium" style="display:none;">HHP</span>
            </div>
            <div class="logo-marquee-item">
              <img src="/logos/alliance-resource.png" alt="Alliance Resource Partners" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium text-sm" style="display:none;">Alliance Resource Partners</span>
            </div>
            <div class="logo-marquee-item">
              <img src="/logos/manhattan-construction-logo.png" alt="Manhattan Construction" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium text-sm" style="display:none;">Manhattan Construction</span>
            </div>
            <div class="logo-marquee-item">
              <img src="/logos/brain-body-soul-logo.png" alt="Brain Body Soul" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium text-sm" style="display:none;">Brain Body Soul</span>
            </div>
            <div class="logo-marquee-item">
              <img src="/logos/JLL-Logo.png" alt="JLL" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium" style="display:none;">JLL</span>
            </div>
            <div class="logo-marquee-item">
              <img src="/logos/CB logo.png" alt="CB" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium" style="display:none;">CB</span>
            </div>
            <!-- Duplicate set for seamless loop -->
            <div class="logo-marquee-item">
              <img src="/logos/Newmark-logo.png" alt="Newmark" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium" style="display:none;">Newmark</span>
            </div>
            <div class="logo-marquee-item">
              <img src="/logos/hhp-grey-logo.png" alt="HHP" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium" style="display:none;">HHP</span>
            </div>
            <div class="logo-marquee-item">
              <img src="/logos/alliance-resource.png" alt="Alliance Resource Partners" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium text-sm" style="display:none;">Alliance Resource Partners</span>
            </div>
            <div class="logo-marquee-item">
              <img src="/logos/manhattan-construction-logo.png" alt="Manhattan Construction" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium text-sm" style="display:none;">Manhattan Construction</span>
            </div>
            <div class="logo-marquee-item">
              <img src="/logos/brain-body-soul-logo.png" alt="Brain Body Soul" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium text-sm" style="display:none;">Brain Body Soul</span>
            </div>
            <div class="logo-marquee-item">
              <img src="/logos/JLL-Logo.png" alt="JLL" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium" style="display:none;">JLL</span>
            </div>
            <div class="logo-marquee-item">
              <img src="/logos/CB logo.png" alt="CB" class="logo-marquee-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <span class="text-gray-400 font-medium" style="display:none;">CB</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SELECTIVITY NOTICE (replaces trust bar) -->
  <section class="py-8 bg-gray-900 border-y border-gray-800">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <p class="text-gray-400">
        <span class="text-white font-semibold">Custom platform engagements are selective.</span>
        We evaluate based on impact potential, organizational readiness, and complexity alignment.
      </p>
    </div>
  </section>

  <!-- SECTION: When This Is Needed - PREMIUM STYLING -->
  <section class="py-24 px-6 bg-white" id="when-needed">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">When This Is Needed</h2>
        <div class="w-24 h-1 bg-blue-600 mx-auto mb-6"></div>
        <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
          Some organizations outgrow standard tools.
        </p>
      </div>

      <!-- Problem Cards - 2x2 grid with amber/warning styling -->
      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <!-- Card 1: System Sprawl -->
        <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border border-gray-100 hover:-translate-y-1">
          <div class="w-14 h-14 bg-amber-50 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-3">System Sprawl</h4>
          <p class="text-gray-600 leading-relaxed">Too many disconnected systems—no single vendor covers your needs</p>
        </div>

        <!-- Card 2: Manual Workarounds -->
        <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border border-gray-100 hover:-translate-y-1">
          <div class="w-14 h-14 bg-amber-50 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655-5.653a2.548 2.548 0 00-3.586-3.586l-1.757 1.757c-1.5 1.5-1.5 3.94 0 5.44l4.655 5.653M11.42 15.17l-5.877-5.877"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-3">Manual Workarounds</h4>
          <p class="text-gray-600 leading-relaxed">Critical processes require manual workarounds everywhere</p>
        </div>

        <!-- Card 3: Unsupported Workflows -->
        <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border border-gray-100 hover:-translate-y-1">
          <div class="w-14 h-14 bg-amber-50 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-3">Unsupported Workflows</h4>
          <p class="text-gray-600 leading-relaxed">Your most important workflows aren't supported by any off-the-shelf tool</p>
        </div>

        <!-- Card 4: Competitive Constraint -->
        <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border border-gray-100 hover:-translate-y-1">
          <div class="w-14 h-14 bg-amber-50 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.25 18L9 11.25l4.306 4.307a11.95 11.95 0 015.814-5.519l2.74-1.22m0 0l-5.94-2.28m5.94 2.28l-2.28 5.941"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-3">Competitive Constraint</h4>
          <p class="text-gray-600 leading-relaxed">Execution limits are creating competitive disadvantage</p>
        </div>
      </div>

      <!-- Qualifying question -->
      <div class="bg-gradient-to-r from-gray-50 to-white rounded-2xl p-8 border border-gray-200 text-center">
        <p class="text-lg md:text-xl text-gray-700 italic">
          "If your business has outgrown its tools—and off-the-shelf solutions feel like forcing a square peg into a round hole—this may be the right path."
        </p>
      </div>
    </div>
  </section>

  <!-- SECTION: What We Build - PREMIUM SHOWCASE -->
  <section class="py-24 px-6 bg-gray-50 border-t border-gray-100">
    <div class="max-w-6xl mx-auto">
      <div class="mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">What We Build</h2>
        <div class="w-24 h-1 bg-blue-600 mb-6"></div>
        <p class="text-xl text-gray-700 max-w-3xl leading-relaxed">
          In select engagements, we design and build custom internal platforms.
        </p>
      </div>

      <!-- Feature Cards - 3x2 grid with premium styling -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Card 1: Internal Operating Systems -->
        <div class="bg-white rounded-2xl p-8 border border-gray-200 shadow-md hover:shadow-xl hover:border-blue-200 transition-all duration-300 group">
          <div class="w-16 h-16 bg-blue-50 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-2">Internal Operating Systems</h4>
          <p class="text-gray-600 leading-relaxed">Centralized platforms that run core business operations—purpose-built for your workflow</p>
        </div>

        <!-- Card 2: Proprietary Workflows -->
        <div class="bg-white rounded-2xl p-8 border border-gray-200 shadow-md hover:shadow-xl hover:border-blue-200 transition-all duration-300 group">
          <div class="w-16 h-16 bg-blue-50 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-2">Proprietary Workflows</h4>
          <p class="text-gray-600 leading-relaxed">Custom workflows that match exactly how your business operates—no compromises</p>
        </div>

        <!-- Card 3: Decision Engines -->
        <div class="bg-white rounded-2xl p-8 border border-gray-200 shadow-md hover:shadow-xl hover:border-blue-200 transition-all duration-300 group">
          <div class="w-16 h-16 bg-blue-50 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-2">Decision Engines</h4>
          <p class="text-gray-600 leading-relaxed">Automated logic for routing, approvals, escalations, and complex business rules</p>
        </div>

        <!-- Card 4: Intelligence Layers -->
        <div class="bg-white rounded-2xl p-8 border border-gray-200 shadow-md hover:shadow-xl hover:border-blue-200 transition-all duration-300 group">
          <div class="w-16 h-16 bg-blue-50 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-2">Intelligence Layers</h4>
          <p class="text-gray-600 leading-relaxed">Advanced AI and automation capabilities embedded into your operations</p>
        </div>

        <!-- Card 5: Multi-Department Integrations -->
        <div class="bg-white rounded-2xl p-8 border border-gray-200 shadow-md hover:shadow-xl hover:border-blue-200 transition-all duration-300 group">
          <div class="w-16 h-16 bg-blue-50 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.75 3.75v4.5m0-4.5h4.5m-4.5 0L9 9M3.75 20.25v-4.5m0 4.5h4.5m-4.5 0L9 15M20.25 3.75h-4.5m4.5 0v4.5m0-4.5L15 9m5.25 11.25h-4.5m4.5 0v-4.5m0 4.5L15 15"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-2">Multi-Department Integrations</h4>
          <p class="text-gray-600 leading-relaxed">Systems that unify data and workflows across departments and functions</p>
        </div>

        <!-- Card 6: Proprietary Analytics -->
        <div class="bg-white rounded-2xl p-8 border border-gray-200 shadow-md hover:shadow-xl hover:border-blue-200 transition-all duration-300 group">
          <div class="w-16 h-16 bg-blue-50 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-2">Proprietary Analytics</h4>
          <p class="text-gray-600 leading-relaxed">Custom analytics and decision tools built for your specific competitive advantage</p>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION: Selectivity Criteria - PREMIUM POSITIONING -->
  <section class="py-24 px-6 bg-white border-t border-gray-100">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">These Engagements Are:</h2>
        <div class="w-24 h-1 bg-blue-600 mx-auto"></div>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8 mb-12">
        <!-- Selective -->
        <div class="bg-gradient-to-br from-blue-50 to-white rounded-2xl p-8 border border-blue-100 text-center hover:shadow-xl transition-all">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-3">Selective</h4>
          <p class="text-gray-600 leading-relaxed">We take on projects where we can deliver meaningful, lasting impact</p>
        </div>

        <!-- Independently Scoped -->
        <div class="bg-gradient-to-br from-blue-50 to-white rounded-2xl p-8 border border-blue-100 text-center hover:shadow-xl transition-all">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
