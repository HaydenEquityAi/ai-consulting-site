---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Us | Intelio - Connect With Us">
<main class="bg-black">
  <!-- CONTACT SECTION -->
  <section class="min-h-screen flex items-center justify-center relative px-6 py-[120px]">
    <!-- Optional: Subtle background gradient -->
    <div class="absolute inset-0 z-0" style="background: radial-gradient(ellipse at 50% 0%, rgba(99, 102, 241, 0.1) 0%, transparent 50%);"></div>
    
    <div class="relative z-10 w-full max-w-[480px]">
      <div class="text-center mb-12">
        <h1 class="text-[36px] md:text-[48px] text-white mb-0 font-medium leading-[1.2]">
          Connect With Us
        </h1>
      </div>
      
      <form id="contact-form" action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-6">
        <!-- Name -->
        <div class="flex flex-col gap-2">
          <label for="name" class="text-sm font-medium text-white/85 uppercase tracking-wider">
            Name
          </label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required 
            class="w-full px-4 py-4 bg-[#1A1A1A] border border-white/10 text-white rounded text-base transition-colors focus:outline-none focus:border-[#0EA5E9] placeholder:text-white/30"
            placeholder=""
          />
        </div>
        
        <!-- Email -->
        <div class="flex flex-col gap-2">
          <label for="email" class="text-sm font-medium text-white/85 uppercase tracking-wider">
            Email
          </label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            class="w-full px-4 py-4 bg-[#1A1A1A] border border-white/10 text-white rounded text-base transition-colors focus:outline-none focus:border-[#0EA5E9] placeholder:text-white/30"
            placeholder=""
          />
        </div>
        
        <!-- Organization -->
        <div class="flex flex-col gap-2">
          <label for="organization" class="text-sm font-medium text-white/85 uppercase tracking-wider">
            Organization
          </label>
          <input 
            type="text" 
            id="organization" 
            name="organization" 
            class="w-full px-4 py-4 bg-[#1A1A1A] border border-white/10 text-white rounded text-base transition-colors focus:outline-none focus:border-[#0EA5E9] placeholder:text-white/30"
            placeholder=""
          />
        </div>
        
        <!-- Message -->
        <div class="flex flex-col gap-2">
          <label for="message" class="text-sm font-medium text-white/85 uppercase tracking-wider">
            How can we help?
          </label>
          <textarea 
            id="message" 
            name="message" 
            rows="4"
            required
            class="w-full px-4 py-4 bg-[#1A1A1A] border border-white/10 text-white rounded text-base transition-colors focus:outline-none focus:border-[#0EA5E9] placeholder:text-white/30 resize-y min-h-[120px]"
            placeholder=""
          ></textarea>
        </div>
        
        <!-- Submit -->
        <button 
          type="submit" 
          class="w-full mt-4 px-8 py-4 bg-[#0EA5E9] hover:bg-[#0284C7] text-white font-medium rounded text-base transition-colors flex items-center justify-center gap-2"
        >
          Send
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </button>
      </form>
      
      <!-- Success Message (hidden by default) -->
      <div id="success-message" class="hidden text-center py-12">
        <div class="w-16 h-16 bg-[#1A1A1A] border border-white/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-[#0EA5E9]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h3 class="text-xl font-medium mb-2 text-white">Message sent</h3>
        <p class="text-white/85">We'll be in touch soon.</p>
      </div>
      
      <!-- Alternative Contact -->
      <div class="mt-16 pt-12 border-t border-white/10 text-center">
        <p class="text-sm text-white/50 mb-4">Or reach us directly</p>
        <a href="mailto:contact@intelio.co" class="block text-lg text-white mb-6 transition-colors hover:text-[#0EA5E9]">
          contact@intelio.co
        </a>
        <div class="flex justify-center gap-4">
          <a 
            href="https://www.linkedin.com/company/intelio-ai/about/" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="w-11 h-11 border border-white/10 rounded flex items-center justify-center transition-all hover:border-[#0EA5E9] hover:bg-[#0EA5E9]/10"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a 
            href="#" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="w-11 h-11 border border-white/10 rounded flex items-center justify-center transition-all hover:border-[#0EA5E9] hover:bg-[#0EA5E9]/10"
            aria-label="X / Twitter"
          >
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</main>

<style>
  /* Typography - Figtree (matches homepage) */
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Figtree', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }
</style>

<script>
  // Form submission handling
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form');
    const successMessage = document.getElementById('success-message');
    
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Here you would typically send the form data to your backend
        // For now, we'll just show the success message
        form.style.display = 'none';
        successMessage.classList.remove('hidden');
        
        // Scroll to success message
        successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
      });
    }
  });
</script>

</Layout>
