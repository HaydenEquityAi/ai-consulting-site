  <script>
  document.querySelectorAll('.faq-card').forEach(card => {
    card.addEventListener('click', function() {
      const isOpen = this.classList.contains('faq-open');
      // Close all other cards
      document.querySelectorAll('.faq-card').forEach(c => {
        c.classList.remove('faq-open');
        c.querySelector('.faq-answer')?.classList.add('hidden');
        c.querySelector('.faq-chevron')?.classList.remove('rotate-180');
      });
      // Toggle current card
      if (!isOpen) {
        this.classList.add('faq-open');
        this.querySelector('.faq-answer')?.classList.remove('hidden');
        this.querySelector('.faq-chevron')?.classList.add('rotate-180');
      }
      });
    });
