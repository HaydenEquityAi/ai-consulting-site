  </section>

  <!-- SECTION 4: ENGAGEMENT MODELS -->
  <section class="py-32 px-6 bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="mb-16">
        <span class="text-xs font-bold uppercase tracking-[0.08em] text-blue-600 mb-4 block">ENGAGEMENT MODELS</span>
