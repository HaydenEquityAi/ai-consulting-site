  /* Case Study Accordion Styles */
  .case-study-card {
    transition: all 0.3s ease;
  }

  .case-study-card.active {
    border-color: #2563eb;
  }

  .case-study-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease-out, padding 0.3s ease;
  }

  .case-study-content.active {
    max-height: 5000px;
    padding-top: 1.5rem;
  }

  .case-study-chevron {
    transition: transform 0.3s ease;
  }

  .case-study-card.active .case-study-chevron {
    transform: rotate(180deg);
  }
</style>

<script>
  // Case Study Accordion Functionality
  document.addEventListener('DOMContentLoaded', function() {
    const caseStudyHeaders = document.querySelectorAll('.case-study-header');
    
    caseStudyHeaders.forEach(header => {
      header.addEventListener('click', function() {
        const card = this.closest('.case-study-card');
        const content = card.querySelector('.case-study-content');
        const isActive = card.classList.contains('active');
        
        // Close all other cards
        document.querySelectorAll('.case-study-card').forEach(c => {
          c.classList.remove('active');
          const cContent = c.querySelector('.case-study-content');
          if (cContent) {
            cContent.classList.remove('active');
            cContent.classList.add('hidden');
          }
        });
        
        // Toggle current card
        if (!isActive) {
          card.classList.add('active');
          content.classList.add('active');
          content.classList.remove('hidden');
        }
      });
    });
  });
</script>

