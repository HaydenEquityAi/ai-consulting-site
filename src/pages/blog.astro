---
import Layout from "../layouts/Layout.astro";
import { getAllPosts, mapTagToCategory, getCardColor, getCategoryIcon } from "../lib/hashnode";

// Fetch posts from Hashnode
const posts = await getAllPosts();

// Sort by publishedAt descending
const sortedPosts = posts.sort((a, b) => {
  return new Date(b.publishedAt).getTime() - new Date(a.publishedAt).getTime();
});

// Get unique categories from posts
const categories = ["All", ...new Set(sortedPosts.map(post => {
  const primaryTag = post.tags[0]?.name || "";
  return mapTagToCategory(primaryTag);
}))];

// Process posts with category and color
const processedPosts = sortedPosts.map(post => {
  const primaryTag = post.tags[0]?.name || "";
  const category = mapTagToCategory(primaryTag);
  const cardColor = getCardColor(category);
  const icon = getCategoryIcon(category);
  
  return {
    ...post,
    category,
    cardColor,
    icon,
  };
});

// Featured post (most recent)
const featuredPost = processedPosts[0];
const regularPosts = processedPosts.slice(1);

// Color gradient classes
const colorGradients: Record<string, string> = {
  orange: "from-orange-400 to-amber-500",
  green: "from-green-400 to-emerald-500",
  blue: "from-blue-400 to-cyan-500",
  purple: "from-purple-400 to-violet-500",
  gray: "from-gray-400 to-gray-500",
};

const colorText: Record<string, string> = {
  orange: "text-orange-500",
  green: "text-green-500",
  blue: "text-blue-500",
  purple: "text-purple-500",
  gray: "text-gray-500",
};

function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString("en-US", { month: "short", day: "numeric", year: "numeric" });
}
---

<Layout title="Blog & Resources - AI Consulting">
  <main class="pt-24">
    <!-- HERO -->
    <section class="py-16 px-6 bg-white">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-medium mb-4">Blog & Resources</h1>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Practical guides, industry insights, and tutorials to help you implement AI effectively in your business.
        </p>
      </div>
    </section>

    <!-- CATEGORY FILTERS -->
    <section class="py-4 px-6 bg-white border-b border-gray-100">
      <div class="max-w-6xl mx-auto">
        <div class="flex flex-wrap gap-3 justify-center" id="category-filters">
          {categories.map(category => (
            <button 
              class={`category-tag ${category === "All" ? "active" : ""} px-4 py-2 text-sm rounded-full border border-gray-200`}
              data-category={category === "All" ? "all" : category.toLowerCase().replace(/\s+/g, "-")}
            >
              {category}
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- FEATURED ARTICLE -->
    {featuredPost && (
      <section class="py-12 px-6 bg-gray-50">
        <div class="max-w-6xl mx-auto">
          <p class="text-sm text-gray-500 mb-6">Featured</p>
          <a href={`/blog/${featuredPost.slug}`} class="article-card block bg-white rounded-2xl overflow-hidden border border-gray-100">
            <div class="grid md:grid-cols-2">
              <div class={`h-64 md:h-auto bg-gradient-to-br ${colorGradients[featuredPost.cardColor]} flex items-center justify-center p-8`}>
                <div class="text-center text-white">
                  <div class="mb-4 flex justify-center" set:html={featuredPost.icon} />
                  <div class="text-white/80 text-sm">{featuredPost.category}</div>
                </div>
              </div>
              <div class="p-8 flex flex-col justify-center">
                <span class={`${colorText[featuredPost.cardColor]} text-sm font-medium mb-2`}>{featuredPost.category}</span>
                <h2 class="text-2xl font-semibold mb-4">{featuredPost.title}</h2>
                <p class="text-gray-600 mb-6">{featuredPost.brief}</p>
                <div class="flex items-center gap-4">
                  {featuredPost.author?.profilePicture ? (
                    <img src={featuredPost.author.profilePicture} alt={featuredPost.author.name} class="w-10 h-10 rounded-full" />
                  ) : (
                    <div class="w-10 h-10 bg-gray-200 rounded-full"></div>
                  )}
                  <div>
                    <div class="font-medium text-sm">{featuredPost.author?.name || "Author"}</div>
                    <div class="text-gray-500 text-xs">
                      {formatDate(featuredPost.publishedAt)} Â· {featuredPost.readTimeInMinutes} min read
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
      </section>
    )}

    <!-- ARTICLE GRID -->
    <section class="py-12 px-6 bg-gray-50">
      <div class="max-w-6xl mx-auto">
        <p class="text-sm text-gray-500 mb-6">Latest articles</p>
        
        <div class="grid md:grid-cols-3 gap-8" id="articles-grid">
          {regularPosts.map(post => {
            const categorySlug = post.category.toLowerCase().replace(/\s+/g, "-");
            return (
              <a 
                href={`/blog/${post.slug}`} 
                class={`article-card bg-white rounded-xl overflow-hidden border border-gray-100`}
                data-category={categorySlug}
              >
                <div class={`h-48 bg-gradient-to-br ${colorGradients[post.cardColor]} flex items-center justify-center`}>
                  <div class="text-white" set:html={post.icon} />
                </div>
                <div class="p-6">
                  <span class={`${colorText[post.cardColor]} text-xs font-medium`}>{post.category}</span>
                  <h3 class="font-semibold mt-2 mb-3">{post.title}</h3>
                  <p class="text-gray-500 text-sm mb-4">{post.brief}</p>
                  <div class="flex items-center justify-between text-xs text-gray-400">
                    <span>{formatDate(post.publishedAt)}</span>
                    <span>{post.readTimeInMinutes} min read</span>
                  </div>
                </div>
              </a>
            );
          })}
        </div>

        {regularPosts.length === 0 && (
          <div class="text-center py-12">
            <p class="text-gray-500">No articles found. Check back soon!</p>
          </div>
        )}
      </div>
    </section>

    <!-- OTHER RESOURCES -->
    <section class="py-16 px-6 bg-white border-t border-gray-100">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-2xl font-medium mb-8 text-center">More Resources</h2>
        <div class="grid md:grid-cols-2 gap-8 max-w-2xl mx-auto">
          
          <a href="/tools" class="flex items-center gap-4 p-6 border border-gray-200 rounded-xl hover:border-blue-300 hover:bg-blue-50/30 transition-all">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <div class="font-semibold">Recommended Tools</div>
              <div class="text-sm text-gray-500">Curated AI tools we use and recommend</div>
            </div>
            <svg class="w-5 h-5 text-gray-400 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>

          <a href="/glossary" class="flex items-center gap-4 p-6 border border-gray-200 rounded-xl hover:border-green-300 hover:bg-green-50/30 transition-all">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <div>
              <div class="font-semibold">AI Glossary</div>
              <div class="text-sm text-gray-500">Key terms and definitions explained</div>
            </div>
            <svg class="w-5 h-5 text-gray-400 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>

        </div>
      </div>
    </section>

    <!-- NEWSLETTER -->
    <section class="py-16 px-6 bg-gray-50">
      <div class="max-w-2xl mx-auto">
        <div class="bg-white border border-gray-200 rounded-2xl p-12 text-center">
          <h2 class="text-2xl font-medium mb-4">Subscribe to our newsletter</h2>
          <p class="text-gray-600 mb-8">
            Get the latest AI insights, tutorials, and industry updates delivered to your inbox weekly.
          </p>
          <form class="flex gap-2 max-w-md mx-auto">
            <input type="email" placeholder="Enter your email" class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <button type="submit" class="px-6 py-3 bg-black text-white text-sm font-medium rounded-lg hover:bg-gray-800 transition-colors">
              Subscribe
            </button>
          </form>
          <p class="text-xs text-gray-400 mt-4">No spam. Unsubscribe anytime.</p>
        </div>
      </div>
    </section>
  </main>

  <script>
    // Category filter functionality
    document.querySelectorAll('.category-tag').forEach(tag => {
      tag.addEventListener('click', function() {
        const category = this.dataset.category;
        
        // Update active state
        document.querySelectorAll('.category-tag').forEach(t => t.classList.remove('active'));
        this.classList.add('active');
        
        // Filter articles
        const articles = document.querySelectorAll('.article-card');
        articles.forEach(article => {
          if (category === 'all') {
            article.style.display = 'block';
          } else {
            const articleCategory = article.dataset.category;
            if (articleCategory === category) {
              article.style.display = 'block';
            } else {
              article.style.display = 'none';
            }
          }
        });
      });
    });
  </script>

  <style>
    .article-card {
      transition: all 0.3s ease;
    }
    .article-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 40px rgba(0,0,0,0.1);
    }
    
    .category-tag {
      transition: all 0.2s ease;
      cursor: pointer;
    }
    .category-tag:hover {
      background: #3b82f6;
      color: white;
    }
    .category-tag.active {
      background: #3b82f6;
      color: white;
    }
  </style>
</Layout>

