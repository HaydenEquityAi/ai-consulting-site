  (function() {
    const slides = [
      {
        headline: "AI built for your business",
        title: "QuantumBlack, AI by intelio",
        description: "We combine advanced AI engineering with strategic thinking to design solutions that create real-world impact—quickly, responsibly, and at scale.",
        video: "/logos/Cinematic_Liquid_Metal_Wave_Animation.mp4",
        link: "/custom-ai-development"
      },
      {
        headline: "Future-proof your foundation",
        title: "intelio Technology",
        description: "We work with organizations to establish a business-backed architecture, ensure data ubiquity, leverage advanced analytics, and set up cyber and data privacy defenses that preempt evolving threats.",
        video: "/logos/Cinematic_Liquid_Metal_Wave_Animation.mp4",
        link: "/ai-integration-automation"
      },
      {
        headline: "Tech-powered growth",
        title: "Growth, Marketing & Sales",
        description: "We help our clients transform their marketing and sales capabilities with tech and AI to capture above-market growth.",
        video: "/logos/Cinematic_Liquid_Metal_Wave_Animation.mp4",
        link: "/ai-integration-automation/workflow-automation"
      }
    ];

    // Card hover state management
    const cardEl = document.getElementById('featured-card');
    if (cardEl) {
      cardEl.addEventListener('mouseenter', () => {
        cardEl.classList.add('hovered');
      });
      cardEl.addEventListener('mouseleave', () => {
        cardEl.classList.remove('hovered');
      });
    }

    let currentSlide = 0;
    const headlineEl = document.getElementById('featured-headline');
    const videoEl = document.getElementById('featured-video');
    const videoSourceEl = document.getElementById('featured-video-source');
    const cardElForLink = document.getElementById('featured-card');
    const titleEl = document.getElementById('featured-title');
    const descriptionEl = document.getElementById('featured-description');
    const dotsEl = document.getElementById('featured-dots');
    const prevBtn = document.getElementById('featured-prev');
    const nextBtn = document.getElementById('featured-next');

    function updateSlide(index) {
      currentSlide = index;
      const slide = slides[index];
      
      // Update headline with fade
      if (headlineEl) {
        headlineEl.style.opacity = '0';
        setTimeout(() => {
          headlineEl.textContent = slide.headline;
          headlineEl.style.opacity = '1';
        }, 150);
      }
      
      // Update video
      if (videoSourceEl && videoEl) {
        videoSourceEl.src = slide.video;
        videoEl.load();
      }
      
      // Update card link and title
      if (cardElForLink) {
        cardElForLink.href = slide.link;
      }
      if (titleEl) {
        titleEl.innerHTML = slide.title + ' <span class="arrow">›</span>';
      }
      
      // Update description with fade
      if (descriptionEl) {
        descriptionEl.style.opacity = '0';
        setTimeout(() => {
          descriptionEl.textContent = slide.description;
          descriptionEl.style.opacity = '1';
        }, 150);
      }
      
      // Update dots
      if (dotsEl) {
        const dots = dotsEl.querySelectorAll('.featured-dot');
        dots.forEach((dot, i) => {
          if (i === index) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }
    }

    function nextSlide() {
      const next = (currentSlide + 1) % slides.length;
      updateSlide(next);
    }

    function prevSlide() {
      const prev = (currentSlide - 1 + slides.length) % slides.length;
      updateSlide(prev);
    }

    // Event listeners
    if (nextBtn) {
      nextBtn.addEventListener('click', nextSlide);
    }
    
    if (prevBtn) {
      prevBtn.addEventListener('click', prevSlide);
    }
    
    if (dotsEl) {
      const dots = dotsEl.querySelectorAll('.featured-dot');
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => updateSlide(index));
      });
    }

    // Initialize to first slide (AI built for your business)
    updateSlide(0);
  })();

</script>
