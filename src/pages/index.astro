        title: "Operations & Integration",
        description: "We help our clients transform their operational capabilities with tech and AI to capture above-market growth.",
        video: "/logos/Cinematic_Liquid_Metal_Wave_Animation.mp4",
        link: "/ai-integration-automation/workflow-automation"
      }
    ];

    let currentSlide = 0;
    const headlineEl = document.getElementById('featured-headline');
    const videoEl = document.getElementById('featured-video');
    const videoSourceEl = document.getElementById('featured-video-source');
    const titleEl = document.getElementById('featured-title');
    const descriptionEl = document.getElementById('featured-description');
    const dotsEl = document.getElementById('featured-dots');
    const prevBtn = document.getElementById('featured-prev');
    const nextBtn = document.getElementById('featured-next');

    function updateSlide(index) {
      currentSlide = index;
      const slide = slides[index];
      
      // Update headline with fade
      if (headlineEl) {
        headlineEl.style.opacity = '0';
        setTimeout(() => {
          headlineEl.textContent = slide.headline;
          headlineEl.style.opacity = '1';
        }, 150);
      }
      
      // Update video
      if (videoSourceEl && videoEl) {
        videoSourceEl.src = slide.video;
        videoEl.load();
      }
      
      // Update title and link
      if (titleEl) {
        titleEl.href = slide.link;
        titleEl.innerHTML = slide.title + ' <span class="arrow">›</span>';
      }
      
      // Update description with fade
      if (descriptionEl) {
        descriptionEl.style.opacity = '0';
        setTimeout(() => {
          descriptionEl.textContent = slide.description;
          descriptionEl.style.opacity = '1';
        }, 150);
      }
      
      // Update dots
      if (dotsEl) {
        const dots = dotsEl.querySelectorAll('.featured-dot');
        dots.forEach((dot, i) => {
          if (i === index) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }
    }

    function nextSlide() {
      const next = (currentSlide + 1) % slides.length;
      updateSlide(next);
    }

    function prevSlide() {
      const prev = (currentSlide - 1 + slides.length) % slides.length;
      updateSlide(prev);
    }

    // Event listeners
    if (nextBtn) {
      nextBtn.addEventListener('click', nextSlide);
    }
    
    if (prevBtn) {
      prevBtn.addEventListener('click', prevSlide);
    }
    
    if (dotsEl) {
      const dots = dotsEl.querySelectorAll('.featured-dot');
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => updateSlide(index));
      });
    }
  })();

  // FAQ Accordion
  document.querySelectorAll('.faq-card').forEach(card => {
    card.addEventListener('click', function() {
      const isOpen = this.classList.contains('faq-open');
      // Close all other cards
      document.querySelectorAll('.faq-card').forEach(c => {
        c.classList.remove('faq-open');
        c.querySelector('.faq-answer')?.classList.add('hidden');
        c.querySelector('.faq-chevron')?.classList.remove('rotate-180');
        c.classList.remove('border-blue-500');
        c.querySelector('.faq-question')?.classList.remove('text-blue-500');
      });
      // Toggle current card
      if (!isOpen) {
        this.classList.add('faq-open', 'border-blue-500');
        this.querySelector('.faq-answer')?.classList.remove('hidden');
        this.querySelector('.faq-chevron')?.classList.add('rotate-180');
        this.querySelector('.faq-question')?.classList.add('text-blue-500');
      }
    });
  });
</script>



