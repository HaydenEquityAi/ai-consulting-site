<style>
  .logo-carousel-container {
    width: 100%;
    overflow: hidden;
    position: relative;
    -webkit-overflow-scrolling: touch;
  }

  .logo-carousel-track {
    display: flex;
    width: fit-content;
    animation: logo-scroll 30s linear infinite;
    will-change: transform;
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
  }

  .logo-carousel-slide {
    display: flex;
    align-items: center;
    gap: 4rem;
    padding: 0 2rem;
    flex-shrink: 0;
  }

  @keyframes logo-scroll {
    0% {
      transform: translateX(0);
      -webkit-transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
      -webkit-transform: translateX(-50%);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .logo-carousel-track {
      animation: logo-scroll 30s linear infinite;
      -webkit-animation: logo-scroll 30s linear infinite;
    }
  }

  @media (max-width: 768px) {
    .logo-carousel-slide {
      gap: 2.5rem;
      padding: 0 1.5rem;
    }
    .logo-carousel-track {
      animation: logo-scroll 30s linear infinite;
      -webkit-animation: logo-scroll 30s linear infinite;
    }
  }

  @media (max-width: 640px) {
    .logo-carousel-slide {
      gap: 2rem;
      padding: 0 1rem;
    }
    .logo-carousel-track {
      animation: logo-scroll 30s linear infinite;
      -webkit-animation: logo-scroll 30s linear infinite;
    }
  }

  /* Pause on hover for better UX (desktop only) */
  @media (hover: hover) {
    .logo-carousel-container:hover .logo-carousel-track {
      animation-play-state: paused;
      -webkit-animation-play-state: paused;
    }
  }

  /* Ensure animation works on mobile */
  @media (prefers-reduced-motion: no-preference) {
    .logo-carousel-track {
      animation: logo-scroll 30s linear infinite;
      -webkit-animation: logo-scroll 30s linear infinite;
    }
  }

  /* Hero headline line break control */
  .hero-headline {
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
    word-break: normal;
    overflow-wrap: break-word;
    box-sizing: border-box;
    text-align: center !important;
    display: block;
    width: 100%;
    padding: 0 1rem;
  }
  
  @media (max-width: 640px) {
    .hero-headline {
      padding: 0 0.5rem;
      font-size: 1.75rem;
      line-height: 1.3;
    }
  }

  /* Video background mobile fixes */
  video {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    object-fit: cover;
  }

  /* Ensure video containers work on mobile */
  @media (max-width: 768px) {
    video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  /* iOS Safari video fixes */
  @supports (-webkit-touch-callout: none) {
    video {
      -webkit-transform: translate(-50%, -50%);
      transform: translate(-50%, -50%);
    }
  }
</style>

