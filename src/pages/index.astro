<style>
  .logo-carousel-container {
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .logo-carousel-track {
    display: flex;
    width: fit-content;
    animation: logo-scroll 30s linear infinite;
  }

  .logo-carousel-slide {
    display: flex;
    align-items: center;
    gap: 4rem;
    padding: 0 2rem;
    flex-shrink: 0;
  }

  @keyframes logo-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .logo-carousel-track {
      animation: logo-scroll 30s linear infinite;
    }
  }

  @media (max-width: 768px) {
    .logo-carousel-slide {
      gap: 2.5rem;
      padding: 0 1.5rem;
    }
    .logo-carousel-track {
      animation: logo-scroll 30s linear infinite;
    }
  }

  @media (max-width: 640px) {
    .logo-carousel-slide {
      gap: 2rem;
      padding: 0 1rem;
    }
    .logo-carousel-track {
      animation: logo-scroll 30s linear infinite;
    }
  }

  /* Pause on hover for better UX */
  .logo-carousel-container:hover .logo-carousel-track {
    animation-play-state: paused;
  }
</style>

